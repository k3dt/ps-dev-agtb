<div class="control-group">
    <label class="control-label">{{label}}</label>
    <div class="controls">
        <select name="{{name}}" {{#if def.multi}} multiple {{/if}}>
            {{#eachOptions def.options}}
                <option value="{{{this.key}}}" {{#has this.key ../value}}selected{{/has}}>{{this.value}}</option>
            {{/eachOptions}}
        </select>
    </div>
</div>