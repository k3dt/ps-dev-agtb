<div class="control-group">
    <label class="control-label">{{label}}</label>
    <div class="controls">
        {{#if def.auto_increment}}
        {{#eq value ""}}--{{else}}{{value}}{{/eq}}
        {{else}}
        <input type="number" class="span4" value="{{value}}">
        {{/if}}
    </div>
</div>