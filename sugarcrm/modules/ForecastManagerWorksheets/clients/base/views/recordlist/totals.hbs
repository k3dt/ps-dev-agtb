<tfoot>
<tr>
    {{#each this.leftColumns}}
        <td>&nbsp;</td>
    {{/each}}
    <td>{{str "LBL_TOTAL" "Forecasts"}}</td>
    <td class="tright">{{formatCurrency this.totals.quota}}</td>
    {{#if this.totals.likely_case_display}}
        <td class="tright">{{formatCurrency this.totals.likely_case}}</td>
        <td class="tright">{{formatCurrency this.totals.likely_adjusted}}</td>
    {{/if}}

    {{#if this.totals.best_case_display}}
        <td class="tright">{{formatCurrency this.totals.best_case}}</td>
        <td class="tright">{{formatCurrency this.totals.best_adjusted}}</td>
    {{/if}}

    {{#if this.totals.worst_case_display}}
        <td class="tright">{{formatCurrency this.totals.worst_case}}</td>
        <td class="tright">{{formatCurrency this.totals.worst_adjusted}}</td>
    {{/if}}
    {{#each this.rightColumns}}
    <td>&nbsp;</td>
    {{/each}}
</tr>
</tfoot>
