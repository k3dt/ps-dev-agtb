<table class="decision-table">
    <thead>
    <tr id="business-rules-header">
        <th>
            <span class="index"></span>
        </th>
        <th>
            <span class="remove-index"></span>
        </th>
        <th>
            <span class="checkbox-index"></span>
        </th>
        <th class="decision-table-separator-border" id="decision-table-conditions-header-column" colspan="{{conditionsSpan}}">
            <span>{{conditionsTitle}}</span>
        </th>
        <th class="decision-table-separator-border" id="decision-table-conditions-header-column">
            <span>{{returnTitle}}</span>
        </th>
        <th class="decision-table-separator-border" id="decision-table-conclusions-header-column" colspan="{{conclusionsSpan}}">
            <span>{{conclusionsTitle}}</span>
        </th>
    </tr>
    </thead>
    <tfoot>
    <tr id="business-rules-footer">
        <td></td>
        <td>
            <span id="add-decision-row-button" class="fa fa-plus decision-table-add-row"></span>
        </td>
        <td></td>
        <td id="decision-table-conditions-footer" colspan="{{conditionsSpan}}"></td>
        <td></td>
        <td id="decision-table-conclusions-footer" colspan="{{conclusionsSpan}}"></td>
    </tr>
    </tfoot>
    <tbody id="decision-table-body" class="ui-sortable">
    <tr id="decision-row-header">
        <td></td>
        <td></td>
        <td>
            <button class="btn-block" id="trash-button">
                <span class="fa fa-trash-o"></span>
            </button>
        </td>
        <td class="decision-table-condition-column">
            <div class="decision-table-conditions-header"></div>
            <div style="float; right;">
                <button class="decision-table-close-element" title="{{removeConditionTitle}}">
                    <span class="fa fa-minus"></span>
                </button>
            </div>
        </td>
        <td>
            <button id="add-condition-button" title="{{addConditionTitle}}" class="decision-table-add-button">
                <span class="fa fa-plus"></span>
            </button>
        </td>
        <td class="decision-table-conclusion-column"></td>
        <td>
            <button id="add-conclusion-button" title="{{addConclusionTitle}}" class="decision-table-add-button">
                <span class="fa fa-plus"></span>
            </button>
        </td>
    </tr>
    </tbody>
</table>