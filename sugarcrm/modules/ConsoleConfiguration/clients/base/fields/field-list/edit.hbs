<nav>
    <ul class="field-list">
        {{#each mappedFields}}
            {{#notEq this.length "1"}}
                <li class="multi-field-block">
                    <ul class="multi-field">
                        <li class="list-header" fieldname="{{this.[0].parent_name}}">
                            {{#each this}}
                                {{#unless @first}}/{{/unless}}
                                {{str label ../../../model.attributes.enabled_module}}
                            {{/each}}
                            <i class="fa fa-times-circle console-field-remove"></i>
                        </li>
                        {{#each this}}
                            <li class="pill" fieldname="{{name}}" parentname="{{parent_name}}"
                                parentlabel="{{parent_label}}">
                                {{str label ../../../model.attributes.enabled_module}}
                                <i class="fa fa-times-circle console-field-remove"></i>
                            </li>
                        {{/each}}
                    </ul>
                </li>
            {{/notEq}}
            {{#eq this.length "1"}}
                <li class="pill outer"
                    fieldname="{{this.[0].name}}"
                    parentname="{{this.[0].parent_name}}"
                    parentlabel="{{this.[0].parent_label}}">
                    {{str this.[0].label ../../model.attributes.enabled_module}}
                    <i class="fa fa-times-circle console-field-remove"></i>
                </li>
            {{/eq}}
        {{/each}}
    </ul>
</nav>
