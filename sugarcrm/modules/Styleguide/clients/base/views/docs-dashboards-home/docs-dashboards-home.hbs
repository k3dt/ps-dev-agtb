                                &lt;/li&gt;
                                &lt;li class="dashlet-container span4 ui-droppable"&gt;
                                    &lt;div class="dashlet"&gt;&lt;/div&gt;
                                &lt;/li&gt;
                            &lt;/ul&gt;
                        &lt;/div&gt;
                    &lt;/li&gt;
                    &lt;li class="row-fluid sortable"&gt;
                    &lt;/li&gt;
                &lt;/ul&gt;
            &lt;/li&gt;
            &lt;li class="span8"&gt;
            &lt;/li&gt;
        &lt;/ul&gt;
    &lt;/div&gt;
&lt;/div&gt;
