<div class="btn-toolbar pull-right">
    {{#if showCommitButton}}
    <div class="btn-group pull-left">
        <a id="save_draft" class="btn disabled">{{str "LBL_SAVE_DRAFT" "Forecasts"}}</a>
    </div>
    <div class="btn-group pull-left">
        <a class="btn btn-primary disabled" id="commit_forecast">
            <i class="icon-upload"></i> {{str "LBL_QC_COMMIT_BUTTON" "Forecasts"}}</a>
    </div>
    {{/if}}
    <div class="btn-group pull-left">
        <div class="dropdown">
            <a href="#" data-toggle="dropdown"
               class="dropdown-toggle btn btn-success">{{str "LBL_ACTIONS" "Forecasts"}} <i class="icon caret"></i></a>
            <ul class="dropdown-menu menu">
                <li><a href="#">{{str "LBL_DUPLICATE" "Forecasts"}}</a></li>
                <li><a href="#">{{str "LBL_SAVE" "Forecasts"}}</a></li>
                <li class="divider"></li>
                <li><a href="#">{{str "LBL_NOTE" "Forecasts"}}</a></li>
                <li><a href="#">{{str "LBL_EMAIL" "Forecasts"}}</a></li>
                <li><a href="#">{{str "LBL_PDF" "Forecasts"}}</a></li>
                <li><a href="#">{{str "LBL_CSV" "Forecasts"}}</a></li>
            </ul>
        </div>
    </div>
    <div class="btn-group pull-left">
        <a href="#" class="btn" id="forecastSettings"><span class="icon-cog"></span></a>
    </div>
</div>