<div class="modal-body">
    <h2>{{str label "Forecasts"}}</h2>
    <p></p>
    {{#with forecast_categories_field}}
        {{#eachOptions options}}
        <fieldset class="{{{key}}}Fields">
            <p>
                <input type="radio" name="{{../name}}" value="{{{key}}}" {{#eq key ../value}}checked{{/eq}}>
                <b>{{value}}</b>
            </p>
        </fieldset>

        {{/eachOptions}}
    {{/with}}

</div>