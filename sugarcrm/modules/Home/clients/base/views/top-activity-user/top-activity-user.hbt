<div class="dashlet-options">
    <div class="row-fluid">
        <div class="span6">
            {{#each this.dashletConfig.buttons}}
                {{field ../this model=../this.settings template="edit"}}
            {{/each}}
        </div>
    </div>
</div>
<div class="twitter-widget">
    {{#each this.collection.models}}
    <div class="news-article">
        <div class="row-fluid header">
            <div class="span12">
                <img src="{{getFieldValue this "pictureUrl"}}" class="avatar">
                <a href="#{{buildRoute module='Users' id=this.attributes.user_id}}">{{getFieldValue this "name"}}</a>
                <h5>
                    <icon class="{{getFieldValue this "icon"}} icon-large"></icon> {{getFieldValue this "label"}}
                </h5>
            </div>
        </div>
    </div>
    {{/each}}
</div>
