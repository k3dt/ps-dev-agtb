<div class="accordion-heading notification-center">
    <a id='{{name}}Title' class="accordion-toggle" data-help-id="{{name}}" data-toggle="collapse"
       data-parent="#config-accordion" href="#{{name}}Collapse">
        <span><strong>{{title}}</strong></span>
    </a>
</div>
<div id="{{name}}Collapse" class="accordion-body collapse">
    <div class="accordion-inner">
        <p class="span12">{{str meta.description module}}</p>
        <div id="carriers-list">
            {{#each carriers}}
                <div class="row-fluid">
                    <div class="span12 record-cell">
                        {{field ../this model=../model template=this.viewName}}
                        {{#if this.address}}
                            {{#with this.address}}
                                {{field ../../../this model=../../../model template=this.viewName}}
                            {{/with}}
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
