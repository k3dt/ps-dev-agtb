<div class="accordion-heading notification-center">
    <a id='{{name}}Title' class="accordion-toggle" data-help-id="{{name}}" data-toggle="collapse"
       data-parent="#config-accordion" href="#{{name}}Collapse"></a>
</div>
<div id="{{name}}Collapse" class="accordion-body collapse">
    <div class="accordion-inner">
        <p class="span12">{{meta.description}}</p>
        <table class="table table-bordered carriers-global-delivery">
            <thead>
            <tr>
                <th>&nbsp;</th>
                <th class="event-name">{{str "LBL_SEND_NOTIFICATION_FOR" this.module}}</th>
                {{#each carriersList}}
                    <th>{{str "LBL_TITLE" @key}}</th>
                {{/each}}
            </tr>
            </thead>
            <tbody>
            {{#each eventsList}}
                <tr>
                    <td>
                        {{#with rowSwitcher}}
                            {{field ../../this model=../../this.model template=this.view}}
                        {{/with}}
                    </td>
                    <td data-event="{{this.name}}" class="event-name">{{this.label}}</td>
                    {{#each this.fields}}
                        <td>
                            {{field ../../this model=../../this.model template=this.view}}
                        </td>
                    {{/each}}
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
