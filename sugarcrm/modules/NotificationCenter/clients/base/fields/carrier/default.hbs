<label>
    <input type="checkbox"
           data-type="{{def.type}}"
           name="{{def.name}}"
           {{#if value}} checked{{/if}}
           {{#eq model.attributes.configMode 'user'}}
               {{#unless ../def.isGloballyEnabled}} disabled{{/unless}}
           {{/eq}}>
    <strong>{{def.label}}</strong>
    <span class="ask-to-enable">
    {{#eq model.attributes.configMode 'user'}}
        {{#unless ../def.isGloballyEnabled}}{{str "LBL_ASK_ADMIN_TO_ENABLE" ../this.module}}{{/unless}}
    {{/eq}}
        {{#eq model.attributes.configMode 'global'}}
            {{#if  def.config.configurable}}  
            <a href="#{{def.name}}/layout/{{def.config.configLayout}}" class="configure"
                >{{#if def.config.isConfigured }}{{str 'LBL_LINK_CARRIER_EDIT' module}} {{else}} {{str 'LBL_LINK_CARRIER_CONFIGURE' module}} {{/if}} </a> 
         {{/if}}
        {{/eq}}
    </span>
</label>

