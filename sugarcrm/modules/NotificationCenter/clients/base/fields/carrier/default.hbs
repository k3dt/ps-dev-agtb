<label>
    <input type="checkbox"
           data-type="{{def.type}}"
           name="{{def.name}}"
           {{#if value}} checked{{/if}}
           {{#eq model.attributes.configMode 'user'}}
               {{#unless ../def.isGloballyEnabled}} disabled{{/unless}}
           {{/eq}}>
    <strong>{{def.label}}</strong>
    <span class="ask-to-enable">
    {{#eq model.attributes.configMode 'user'}}
        {{#unless ../def.isGloballyEnabled}}{{str "LBL_ASK_ADMIN_TO_ENABLE" ../this.module}}{{/unless}}
    {{/eq}}
    </span>
</label>

