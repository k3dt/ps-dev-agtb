<a class="fa fa-times pull-right feedback-close" data-action="close"></a>
{{#each meta.panels}}
    <p>{{str label ../module}}</p>
    {{#each fields}}
        <div class="row-fluid control-group">
            <h5>{{str label ../../module}}</h5>
            <div class="controls span12">
                {{field ../../this model=../../model template=template}}
            </div>
        </div>
    {{/each}}
{{/each}}
<div class="row-fluid feedback-footer">
    <span class="span12">{{{str "LBL_FEEDBACK_CONTACT_SUPPORT" module}}}
        <button class="btn btn-primary pull-right" data-action="submit">{{str 'LBL_BTN_SUBMIT_FEEDBACK' module}}</button>
    </span>
</div>
<aside>
    <small>
        We collect certain usage data at the time of submission. <a href="#">Click here to learn more</a>. We do not collect contact information. Please <a href="">contact support</a> for bugs or other issues that require a response.
    </small>
</aside>
