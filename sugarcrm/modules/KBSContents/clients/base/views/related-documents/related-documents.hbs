{{#if collection.length}}
    <ul class="unstyled listed kbcontents" data-action="pagination-body">
        {{#each collection.models}}
            <li>
                <h5><a href="#{{buildRoute model=this action="detail"}}">{{getFieldValue this "name"}}</a></h5>
                <div class="details">
                    {{#if attributes.created_by}}
                        <a href="#{{buildRoute module="Employees" id=attributes.created_by action="detail"}}">
                            {{getFieldValue this "created_by_name"}}
                        </a>&#44;
                    {{else}}
                        {{str "LBL_UNASSIGNED" this.module}}&#44;
                    {{/if}}
                    {{relativeTime attributes.date_entered class='date'}}
                </div>
            </li>
        {{/each}}
    </ul>
    {{#notEq collection.next_offset "-1"}}
        <div class="block-footer">
            <a data-action="show-more">{{str "LBL_MORE_MOST_USEFUL_ARTICLES" this.module}}</a>
        </div>
    {{/notEq}}
{{else}}
<div class="block-footer">
    {{#if collection.dataFetched}}
        {{str "LBL_NO_DATA_AVAILABLE" this.module}}
    {{else}}
        {{str "LBL_LOADING" this.module}}
    {{/if}}
</div>
{{/if}}

