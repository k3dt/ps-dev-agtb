{{#if tweets}}
<link rel="stylesheet" href="../clients/summer/views/twitter/sprite.css" xmlns="http://www.w3.org/1999/html">
<div class="block thumbnail">
    <div class="twitter-widget">
        <h4 data-tour="tour-{{module}}-tweets">Tweets</h4>

        <ul>
        {{#each tweets}}
        {{timeago date}}
        <li class="tweet">
        {{{text}}}</br><br></li>
        {{/each}}

            </ul>
    </div>
</div>
{{/if}}
