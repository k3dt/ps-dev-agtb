                                        {{/notEq}}
                                    </div>
                                </li>
                            </ul>
                        {{/each}}
                    {{else}}
                        <li class="divider"></li>
                        <em class="no-reminders">{{str "LBL_REMINDERS_NONE_FOUND"}}</em>
                    {{/if}}
                </div>
                <div id="pane4" class="tab-pane {{#if allPillActive}}active{{/if}}">
                    {{#if this.collection.models.length}}
                        {{#each this.collection.models}}
