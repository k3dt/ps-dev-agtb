                                            <span class="reminders-item-finished">{{this.attributes.name}}</span>
                                        </div>
                                    {{/notEq}}
                                    <div class="reminders-remove">
                                        <i class="icon-trash"></i>
                                    </div>
                                    <div class="reminders-date-info">
                                        {{#notEq this.attributes.status "Completed"}}
                                            <h6 class="reminders-due-date">{{str "DATA_TYPE_DUE"}}: {{this.attributes.date_due}}</h6>
                                        {{else}}
                                            <h6 class="reminders-finished">{{str "LBL_REMINDERS_FINISHED"}}</h6>
                                        {{/notEq}}
                                    </div>
                                </li>
                            </ul>
                        {{/each}}
                    {{else}}
                        <li class="divider"></li>
                        <em class="no-reminders">{{str "LBL_REMINDERS_NONE_FOUND"}}</em>
                    {{/if}}
                </div>
                <div id="pane3" class="tab-pane {{#if upcomingPillActive}}active{{/if}}">
                    {{#if this.collection.modelList.upcoming.length}}
