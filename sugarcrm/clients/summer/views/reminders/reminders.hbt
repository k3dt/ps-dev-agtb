                                            <span>{{this.attributes.name}}</span>
                                        </div>
                                    {{else}}
                                        <div class="reminders-checkbox-container">
                                            <label class="checkbox">
                                                <input class="reminders-status" type="checkbox" checked="checked"/>
                                            </label>
                                        </div>
                                        <div class="reminders-description-container">
                                            <span class="reminders-item-finished">{{this.attributes.name}}</span>
                                        </div>
                                    {{/notEq}}
                                    <div class="reminders-remove">
                                        <i class="icon-trash"></i>
                                    </div>
                                    <div class="reminders-date-info">
                                        {{#notEq this.attributes.status "Completed"}}
                                            <h6 class="reminders-due-date">{{str "DATA_TYPE_DUE"}}: {{this.attributes.date_due}}</h6>
                                        {{else}}
