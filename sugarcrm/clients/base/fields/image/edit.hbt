{{#if value}}
<div{{#if def.width}} style="width: {{def.width}}px"{{/if}} class="dropup">
<img src="{{fileURL}}">
<span class="image-overlay-with-button">
<a href="javascript:void(0)" class="btn btn-mini btn-danger delete hide" rel="tooltip"><i class="icon-trash"></i> {{str "LBL_DELETE"}}</a>
</span>
</div>
{{/if}}
<div>
<input type="file" name="{{name}}" class="input-xlarge wide tleft">
<p class="help-block"></p>
</div>
