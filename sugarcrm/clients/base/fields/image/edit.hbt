{{#if value}}
<div{{#if def.width}} style="width: {{def.width}}px"{{/if}} class="dropup">
<img src="{{value}}">
<span class="image-overlay-with-button">
<a href="javascript:void(0)" class="btn btn-mini btn-danger delete" rel="tooltip"><i class="icon-trash"></i> {{str "LBL_DELETE"}}</a>
</span>
</div>
{{/if}}
<input type="file" name="{{name}}" />
<p class="help-block"></p>
