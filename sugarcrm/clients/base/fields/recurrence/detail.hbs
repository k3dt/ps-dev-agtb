{{#each fields}}
    <span class="record-cell nopadding{{#if def.span}} span{{def.span}}{{/if}}" data-name="{{name}}" data-type="{{type}}">
        {{#unless dismiss_label}}
            <div class="record-label" data-name="{{name}}">{{str label ../module}}</div>
        {{/unless}}
        <span data-fieldname="{{name}}" class="normal">
            {{placeholder}}
        </span>
    </span>
{{/each}}
