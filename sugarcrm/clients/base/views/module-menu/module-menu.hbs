{{#if meta.short}}
    <a class="module-list-link" href="#{{buildRoute module=module}}" data-route="#{{buildRoute module=module}}" track="click:{{module}}"><span class="label label-module label-module-mini label-{{module}}" title="{{str "LBL_MODULE_NAME" module}}">{{moduleIconLabel module}}</span>{{str 'LBL_MODULE_NAME' module}}</a>
{{else}}
    <a class="btn btn-invisible btn-link" href="#{{buildRoute module=module}}" data-route="#{{buildRoute module=module}}" track="click:{{module}}">{{str 'LBL_MODULE_NAME' module}}</a>
    {{#if actions}}
    <button type="button" title="{{str "LBL_LINK_MORE" module}}" data-toggle="dropdown" class="btn btn-invisible dropdown-toggle" track="click:{{name}}-dropdown"><i class="icon-caret-down"></i></button>
    <div class="dropdown-menu scroll">
        <ul role="menu">
            {{#each actions}}
                <li><a tabindex="-1" {{#if event}}href="javascript:void(0);" data-event="{{event}}" track="click:{{event}}"{{else}}href="{{route}}" data-route="{{route}}" track="click:{{route}}"{{/if}}>{{#if icon}}<i class="{{icon}}"></i>{{/if}}{{str label ../module}}</a></li>
            {{/each}}
            <li class="divider" data-container="recently-viewed"></li>
            <li class="divider" data-container="favorites"></li>
        </ul>
    </div>
    {{/if}}
{{/if}}
