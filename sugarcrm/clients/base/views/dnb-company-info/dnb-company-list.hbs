<div id="dnb-company-list-loading" class="block-footer">
{{str "LBL_DNB_SEARCH_LOADING"}}
</div>
<div id="dnb-company-list">
    {{#if companies}}
        <div>
            <ul class="unstyled listed" id="dnb_company_list">
                {{#each companies}}
                    <li>
                            <a class="dnb-company-name"
                               id="{{this.DUNSNumber}}">
                                {{this.OrganizationPrimaryName.OrganizationName.$}}
                            </a>
                            {{#if this.isDupe}}
                                <span class="label pull-right" data-placement="right">{{str "LBL_DNB_DUPLICATE"}}</span>
                            {{/if}}
                            <br/>
                            <div class="record-label dnb-company-list">
                                {{#if this.StreetAddressLine.[0].LineText}}
                                    {{this.StreetAddressLine.[0].LineText}}
                                {{/if}}
                                {{#if this.PrimaryAddress.PrimaryTownName}}
                                    {{this.PrimaryAddress.PrimaryTownName}},
                                {{/if}} 

                                {{#if this.PrimaryAddress.TerritoryOfficialName}}
                                    {{this.PrimaryAddress.TerritoryOfficialName}},
                                {{/if}}

                                {{#if this.PrimaryAddress.CountryISOAlpha2Code}}
                                    {{this.PrimaryAddress.CountryISOAlpha2Code}}
                                {{/if}}
                                {{#if this.FamilyTreeMemberRole.0.FamilyTreeMemberRoleText.$}}
                                    <span class="label pull-right" data-placement="right">
                                        {{this.FamilyTreeMemberRole.0.FamilyTreeMemberRoleText.$}}
                                    </span>
                                {{/if}}
                            </div>
                        </li>
                {{/each}}
            </ul>
        </div>
    {{else}}
        <aside class='create-no-data'>
            {{#if errmsg}}
                <em>{{errmsg}}</em>
            {{else}}
                <em>{{str "LBL_DNB_NO_DATA"}}</em>
            {{/if}}
        </aside>
    {{/if}}
</div>