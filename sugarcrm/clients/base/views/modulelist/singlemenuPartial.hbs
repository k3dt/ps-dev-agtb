<li class="dropdown" data-module="{{name}}" data-menuindex="{{menuIndex}}">
    <a  class="moreLink hide" href="#{{name}}" data-route="#{{name}}">{{label}}</a>
    <div class="btn-group">
        <a  class="btn btn-invisible btn-link" href="#{{name}}" data-route="#{{name}}">{{label}}</a>
        {{#if menu}}
            <button type="button" data-toggle="dropdown" class="btn btn-invisible dropdown-toggle" track="click:{{name}}-dropdown"><i class="icon-caret-down"></i></button>
            <div class="dropdown-menu scroll">
                <ul role="menu">
                    {{#each menu}}
                        <li><a class="actionLink" tabindex="-1" href="{{#if event}}javascript:void(0);{{else}}{{route}}{{/if}}" data-{{#if event}}event="{{event}}" track="click:{{event}}"{{else}}route="{{route}}" track="click:{{route}}"{{/if}}>{{#if icon}}<i class="{{icon}}"></i>{{/if}}{{str label ../name}}</a></li>
                    {{/each}}
                    <li class="divider" data-container="recents"></li>
                    <li class="divider" data-container="favorites"></li>
                </ul>
            </div>
        {{/if}}
    </div>
</li>
