<div id="dnb-financials-loading" class="block-footer">
{{str "LBL_DNB_FINANCIAL_LOADING"}} ...
</div>
<div id="dnb-financials-details">
	{{#if OrderProductResponse}}
	<div class="accordian dnb-show-less" id="dnb-financials-accordian">

		<!-- Recent Market Analysis -->
		{{#if OrderProductResponse.OrderProductResponseDetail.Product.Organization.ThirdPartyAssessment.ThirdPartyAssessment.[0].ThirdPartyInformation.OtherInformation}}
		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#dnb-financials-accordian" href="#recent-market-analysis">
					{{str "LBL_DNB_REC_MARK_ANALYSIS"}}
				</a>
			</div>
			<div id="recent-market-analysis" class="accordion-body collapse in">
				<div class="accordion-inner">
						<table class="table table-striped table-condensed">
							{{#each OrderProductResponse.OrderProductResponseDetail.Product.Organization.ThirdPartyAssessment.ThirdPartyAssessment.[0].ThirdPartyInformation.OtherInformation}}
							<tr>
								<td>
									{{this.InformationDescription}}
								</td>
								<td>
									{{this.InformationValue}}
								</td>
							</tr>
							{{/each}}
						</table>
				</div>
			</div>
		</div>
		{{/if}}
		
		<!-- Annual Income Statements -->
		{{#if OrderProductResponse.OrderProductResponseDetail.Product.Organization.Financial.KeyFinancialFiguresOverview}}
		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#dnb-financials-accordian" href="#ann-inc-stmt">
					{{str "LBL_DNB_FIN_STMT"}}
				</a>
			</div>
			<div id="ann-inc-stmt" class="accordion-body collapse">
				<div class="accordion-inner">
					<table class="table table-striped table-condensed">
						<thead>
							<tr>
								<th> {{str "LBL_DNB_FINANCIAL_PERIOD"}}</th>
								<th> {{str "LBL_DNB_SALES_REVENUE"}}</th>
							</tr>
						</thead>
						<tbody>
							{{#each OrderProductResponse.OrderProductResponseDetail.Product.Organization.Financial.KeyFinancialFiguresOverview}}
								<tr>
									<td>
										{{this.StatementHeaderDetails.FinancialStatementToDate.$}}
									</td>
									<td> 
										{{this.SalesRevenueAmount.[0].$}}&nbsp;&nbsp;(in {{this.SalesRevenueAmount.[0].[@UnitOfSize]}})				
									</td>
								</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		{{/if}}
		
		<!-- Basic Financial Information -->
		<div class="accordion-group">
			<div class="accordion-heading">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#dnb-financials-accordian" href="#basic-fin-info">
					{{str "LBL_DNB_BASIC_FIN_INF"}}
				</a>
			</div>
			<div id="basic-fin-info" class="accordion-body collapse">
				<div class="accordion-inner dnb-inner-nav">
					<table class="table table-striped dataTable">
						{{#if OrderProductResponse.OrderProductResponseDetail.Product.Organization.OrganizationDetail.ControlOwnershipTypeText.$}}
							<tr>
								<td colspan='2'>
									<b> {{str "LBL_DNB_FIN_COMP_TYPE"}}: </b>
								
									{{OrderProductResponse.OrderProductResponseDetail.Product.Organization.OrganizationDetail.ControlOwnershipTypeText.$}}	
								</td>
							</tr>
						{{/if}}
						{{#if OrderProductResponse.OrderProductResponseDetail.Product.Organization.RegisteredDetail.StockExchangeDetails}}
							<tr>
								<td class='dnb-stock-exchange'>
									<b> {{str "LBL_DNB_FIN_STCK_EXCH"}} </b>
								</td>
								<td>
									<b> {{str "LBL_DNB_FIN_STCK_SYM"}} </b>
								</td>
							</tr>
							{{#each OrderProductResponse.OrderProductResponseDetail.Product.Organization.RegisteredDetail.StockExchangeDetails}}
								{{#if this.StockExchangeName.$}}
									<tr>
										<td>
											{{this.StockExchangeName.$}}	
										</td>
										<td>
											{{this.StockExchangeTickerName}}
										</td>
									</tr>
								{{/if}}
							{{/each}}
						{{/if}}
					</table>
				</div>
			</div>
		</div>

		
		
	</div>
	<div class="dnb-show-more">
        <a class="showMoreData">{{str "LBL_DNB_SHOW_MORE"}}... <i class="icon-chevron-down"></i></a>
        <a class="showLessData">{{str "LBL_DNB_SHOW_LESS"}}... <i class="icon-chevron-up"></i></a>
    </div>	
	
		
	{{else}}
		<aside>
			<em>{{errmsg}}</em>
		</aside>		
	{{/if}}
</div>