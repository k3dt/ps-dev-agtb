<phpunit bootstrap="./SugarTestHelper.php" 
    backupGlobals="false"
    backupStaticAttributes="false">
    <testsuites>
        <testsuite>
            <directory>build</directory>
            <directory>data</directory>
            <directory>include</directory>
            <directory>install</directory>
            <directory>modules</directory>
            <directory>ModuleInstall</directory>
            <directory>service</directory>
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory suffix=".php">./cache</directory>
            <directory suffix=".php">./custom</directory>
            <directory suffix=".php">./examples</directory>
            <directory suffix=".php">./include/nusoap</directory>
            <directory suffix=".php">./include/phpmailer</directory>
            <directory suffix=".php">./include/tcpdf</directory>
            <directory suffix=".php">./include/Smarty/internals</directory>
            <file>./include/Smarty/Smarty.class.php</file>
            <file>./include/Smarty/Smarty_Compiler.class.php</file>
            <directory suffix=".php">./jscalendar</directory>
            <directory suffix=".php">./jssource</directory>
            <directory suffix=".php">./log4php</directory>
            <directory suffix=".php">./metadata</directory>
            <directory suffix=".php">./test</directory>
            <directory suffix=".php">./themes</directory>
            <directory suffix=".php">./XTemplate</directory>
            <file>./config.php</file>
            <file>./config_override.php</file>
        </blacklist>
    </filter>
</phpunit>
