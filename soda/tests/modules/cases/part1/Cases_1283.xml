<soda>
	<!-- Edit Case_Verify that case is edited when entering special characters in several fields (Such as entering "\","#" in "Subject" of the case) for the "Edit" function. -->
	<puts text="Test: Cases_1283.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!---create a case-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />

	<!--search case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>
	
	<div id="Casesbasic_searchSearchForm">
		<textfield id="name_basic" set="{@pre_case_name}" />
	</div>
	<button id="search_form_submit" />
	<link text="{@pre_case_name}" />
	<timestamp/>

	<!--modify case-->
	<csv file="{@global.scriptsdir}/csvs/cases/Case_1283.csv" var="Case_1283">
		<button id="edit_button" />
		<textfield id="name" set="{@Case_1283.new_name} {@user.name} {@stamp}" />
		<button value="Save" />
		<div class="moduleTitle">
			<link href="index.php?module=Cases&amp;action=index" click="false" />
			<browser assert="{@Case_1283.new_name} {@user.name} {@stamp}" />
		</div>
	</csv>

	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1283.xml finished." />
</soda>