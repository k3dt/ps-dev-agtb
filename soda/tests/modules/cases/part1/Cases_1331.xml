<soda>
	<!-- Edit Case_Verify that case is not changed when entering non-existing data (such as entering a non-existing account name in "Account Name" field) for the "Edit" function -->
	<puts text="Test: Cases_1331.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<timestamp/>
	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />

	<!--go to case module and edit-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<textfield id="name_basic" set="{@pre_case_name}" />
	<button id="search_form_submit" />

	<link text="{@pre_case_name}" />

	<button id="edit_button" />

	<!--create case record from quick create-->
	<csv file="{@global.scriptsdir}/csvs/cases/Case_1331.csv" var="case_1331">
		<textfield id="account_name" set="{@case_1331.account_record}" jscriptevent="onkeydown" />
		<textfield id="account_name" click="false" jscriptevent="onkeyup" />
		<button value="Save" />
	</csv>
	<browser assert="Missing required field: Account Name" />
	<browser assert="Missing required field: No match for field: Account Name" />
	
	<button value="Cancel" alert="true" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1331.xml finished." />
</soda>