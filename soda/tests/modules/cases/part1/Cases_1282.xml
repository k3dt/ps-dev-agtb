<soda>
	<!-- Create Case_Verify that case is created when entering special characters in several fields (such as entering "\","#") for the "Create Case" function -->
	<puts text="Test: Cases_1282.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<timestamp/>

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<link text="Create Case" />

	<!--the create code from lib-->
	<csv file="{@global.scriptsdir}/csvs/cases/Case_1282.csv" var="Case_1282">            
		<textfield id="name" set="{@Case_1282.name} {@user.name} {@stamp}" /> 
		<textfield id="description" set="{@Case_1282.description}" />
		<textfield id="resolution" set="{@Case_1282.resolution}" />
		<select id="status" set="{@Case_1282.status}" /> 
		<select id="priority" set="{@Case_1282.priority}" />            
		<select id="type" set="{@Case_1282.type}" />     

		<!--Account Select-->
		<button id="btn_account_name" />
		<browser assert="Account Search" />
		<textfield id="name_advanced" set="{@pre_account_name}" /> 
		<button value="Search" />
		<link text="{@pre_account_name}" />


		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />                        
		<textfield name="last_name_advanced" set="{@Case_1282.assigned_user_name}" />                        
		<button value="Search" />
		<link text="{@Case_1282.assigned_user_name}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Case_1282.team_name}" /> 
		<button value="Search" />
		<link text="{@Case_1282.team_name}" />

		<button value="Save" />

		<div class="moduleTitle">
			<link href="index.php?module=Cases&amp;action=index" click="false" />
			<browser assert="{@Case_1282.name} {@user.name} {@stamp}" />
		</div>
	
		<!--Save the case id & name-->
		<form name="DetailView">
			<hidden name="record" var="pre_case_id" />
		</form>
	</csv>

	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1282.xml finished." />
</soda>