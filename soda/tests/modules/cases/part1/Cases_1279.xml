<soda>
	<!-- Full Form Create Call_Verify that a related call can be scheduled by "Full Form" function in call edit view -->
	<puts text="Test: Cases_1279.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!--Create case-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />

	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<!--search case-->
	<button id="search_form_submit" />
	<div id="Casesbasic_searchSearchForm">
		<textfield id="name_basic" set="{@pre_case_name}" />
	</div>
	<button id="search_form_submit" />
	<link text="{@pre_case_name}" />

	<!--create a call-->
	<csv file="{@global.scriptsdir}/csvs/cases/Case_1279.csv" var="Case_1279">
		<timestamp/>
		<div id="list_subpanel_activities">
			<button value="  Log Call  " />
		</div>
		
		<wait timeout="2" />
		
		<form id="form_SubpanelQuickCreate_Calls">
			<button id="Calls_subpanel_full_form_button" />
		</form>

		<!---create meeting code-->
		<textfield id="name" set="{@Case_1279.name} {@user.name} {@stamp}" />
		<textfield id="date_start_date" set="{@Case_1279.date_start_date}" />
		<select id="date_start_hours" set="{@Case_1279.date_start_hours}" />
		<select id="date_start_minutes" set="{@Case_1279.date_start_minutes}" />

		<textfield name="duration_hours" set="{@Case_1279.duration_hours}" />
		<select name="duration_minutes" set="{@Case_1279.duration_minutes}" />

		<select id="direction" set="{@Case_1279.direction}" />
		<select id="status" set="{@Case_1279.status}" />

		<checkbox name="reminder_checked" set="{@Case_1279.reminder_checked}" />
		<textfield id="description" set="{@Case_1279.description}" />

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />                        
		<textfield name="last_name_advanced" set="{@Case_1279.assigned_user_name}" />                        
		<button value="Search" />
		<link text="{@Case_1279.assigned_user_name}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Case_1279.team_name}" /> 
		<button value="Search" />
		<link text="{@Case_1279.team_name}" />
		<button value="Save" />

		<link id="moduleTab_Cases" />
		<div class="moduleTitle">
			<link href="index.php?module=Cases&amp;action=index" click="false" />
		</div>

		<textfield id="name_basic" set="{@pre_case_name}" />
		<button id="search_form_submit" />
		<link text="{@pre_case_name}" />
		<div id="list_subpanel_activities">
			<table class="list view">
				<link text="{@Case_1279.name} {@user.name} {@stamp}" click="false" />
			</table>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />

	<puts text="Test: Cases_1279.xml finished." />
</soda>