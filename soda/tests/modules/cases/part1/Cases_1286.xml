<soda>
	<!-- Create Task_Verify that a task for case is not created when several mandatory fields are left empty for the "Create Task" function -->
	<puts text="Test: Cases_1286.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!---create a contact and a case-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />

	<!--search case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button id="search_form_clear" />
	<link text="{@pre_case_name}" />
	<timestamp/>

	<!--create a task-->
	<csv file="{@global.scriptsdir}/csvs/cases/Case_1286.csv" var="Case_1286">
		<div id="list_subpanel_activities">
			<button name="Activities_createtask_button" value="  Create Task  " />
		</div>

		<wait/>
		<!--set data-->
		<form id="form_SubpanelQuickCreate_Tasks">
			<select id="status" set="{@Case_1286.status}" />
			<textfield id="date_due_date" set="{@Case_1286.date_due_date}" />
			<select id="date_due_hours" set="{@Case_1286.date_due_hours}" />
			<select id="date_due_minutes" set="{@Case_1286.date_due_minutes}" />
			<textfield id="date_start_date" set="{@Case_1286.date_start_date}" />
			<select id="date_start_hours" set="{@Case_1286.date_start_hours}" />
			<select id="date_start_minutes" set="{@Case_1286.date_start_minutes}" />
			<button id="btn_contact_name" />
		</form>
		<textfield id="first_name_advanced" set="{@pre_contact_first_name}" />
		<textfield id="last_name_advanced" set="{@pre_contact_last_name}" />
		<button value="Search" />
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
		<form id="form_SubpanelQuickCreate_Tasks">
			<select id="priority" set="{@Case_1286.priority}" />
		</form>

		<!--select team-->
		<form id="form_SubpanelQuickCreate_Tasks">
			<table id="form_SubpanelQuickCreate_Tasks_team_name_table">
				<button value="Select" />
			</table>
		</form>
		<browser assert="Team Search" />
		<textfield name="name" set="{@case_record.team_name}" /> 
		<button value="Search" />
		<link text="{@case_record.team_name}" />

		<!---select user-->
		<form id="form_SubpanelQuickCreate_Tasks">
			<button id="btn_assigned_user_name" />
		</form>
		<browser assert="User Search" />                        
		<textfield name="last_name_advanced" set="{@case_record.assigned_user_name}" />                        
		<button value="Search" />
		<link text="{@case_record.assigned_user_name}" />

		<form id="form_SubpanelQuickCreate_Tasks">
			<textfield id="description" set="{@Case_1286.Description}" />
			<button id="Tasks_subpanel_save_button" />
			<browser assert="Missing required field: Subject" />
			<button value="Cancel" alert="true" />
		</form>
	</csv>

	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1286.xml finished." />
</soda>