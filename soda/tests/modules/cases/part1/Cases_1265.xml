<soda>
	<!-- Edit Case_Verify that case can be edited when using "Edit" function in "Case" detail view -->
	<puts text="Test: Cases_1265.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!--Create case-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />

	<var var="case_record1" set="{@pre_case_name}" />
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<!--search case-->
	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record1}" />
	<button id="search_form_submit" />

	<link text="{@case_record1}" />

	<timestamp/>
	<!--edit the record-->
	<button id="edit_button" />

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1265.csv" var="case_1265">
		<textfield id="name" set="{@case_1265.name} {@user.name} {@stamp}" />

		<button value="Save" />
		<link id="moduleTab_Cases" />
		<div class="moduleTitle">
			<link href="index.php?module=Cases&amp;action=index" click="false" />
		</div>

		<button value="Clear" />
		<textfield id="name_basic" set="{@case_1265.name} {@user.name} {@stamp}" />
		<button id="search_form_submit" />

		<table class="list view">
			<span class="pageNumbers" assert="(1 - 1 of 1)" />
		</table>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1265.xml finished." />
</soda>