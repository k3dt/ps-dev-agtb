<soda>
   <!-- Cases_Edit Scheduled Meeting_Verify that the meeting detail view is 
      displayed after clicking the meeting subject in Activities sub-panel 
   -->
	<puts text="Test: Cases_1362.xml starting." />
   <csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" 
      var="cases" />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create a Meeting-->
   <div id="list_subpanel_activities">
		<button name="Activities_create_button" />
      <wait timeout="3" />
	</div>
	<timestamp />

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1362.csv" var="Case_1362">
		<textfield id="name" set="{@Case_1362.name} {@user.name} {@stamp}" />
		<button id="Meetings_subpanel_save_button" />
	</csv>
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Case_1362.name} {@user.name} {@stamp}" click="true" />
		</table>
	</div>

	<div class="moduleTitle">
		<link href="index.php?module=Meetings&amp;action=index" click="false" />
		<browser assert="{@Case_1362.name} {@user.name} {@stamp}" />
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	<puts text="Test: Cases_1362.xml finished." />
</soda>
