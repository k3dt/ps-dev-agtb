<soda>
	<!-- Edit Task_Verify that modification of task for case can be canceled in task detail view -->
	<puts text="Test: Cases_1353.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create a task-->
	<div id="list_subpanel_activities">
		<button value="  Create Task  " />
	</div>

	<timestamp />

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1353.csv" var="Case_1353">
		<form id="form_SubpanelQuickCreate_Tasks">
			<textfield id="name" set="{@Case_1353.name} {@user.name} {@stamp}" />
		</form>
		<button id="Tasks_subpanel_save_button" />

		<!--modify the Task-->
		<div id="list_subpanel_activities">
			<table class="list view">
				<link text="{@Case_1353.name} {@user.name} {@stamp}" click="false" />
			</table>

			<link class="listViewTdToolsS1" index="1" />
		</div>
		<textfield id="name" set="{@Case_1353.new_name} {@user.name} {@stamp}" />
		<button value="Cancel" alert="true" />

		<div id="list_subpanel_activities">
			<table class="list view">
				<link text="{@Case_1353.name} {@user.name} {@stamp}" click="false" />
			</table>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1353.xml finished." />
</soda>