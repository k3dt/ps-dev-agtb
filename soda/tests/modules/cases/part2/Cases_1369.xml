<soda>
	<!-- Edit Scheduled Call_Verify that modification of scheduled call for case can be canceled -->
	<puts text="Test: Cases_1369.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />
	<timestamp />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create Call-->
	<div id="list_subpanel_activities">
		<button value="  Log Call  " />
      <wait timeout="3" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1369.csv" var="Case_1369">
      <div id="Default_Calls_Subpanel">
   		<textfield id="name" set="{@Case_1369.name} {@user.name} {@stamp}" />
      </div>
		<button id="Calls_subpanel_save_button" />
	</csv>

	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Case_1369.name} {@user.name} {@stamp}" />
		</table>
	</div>

	<button id="edit_button" />

	<textfield id="name" set="{@Case_1369.new_name} {@user.name} {@stamp}" />
	<button value="Cancel" alert="true" />
	<div class="moduleTitle">
		<link href="index.php?module=Calls&amp;action=index" click="false" />
		<browser assert="{@Case_1369.name} {@user.name} {@stamp}" />
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1369.xml finished." />
</soda>
