<soda>
	<!-- Edit Note_Verify that the information of a note for case can be modified when using "Edit" function in "History" sub-panel -->
	<puts text="Test: Cases_1380.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />
	<timestamp />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create Note-->
	<div id="list_subpanel_history">
		<button value="  Create Note or Attachment  " />
	</div>
	<wait timeout="2" />

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1380.csv" var="Case_1380">
		<form id="form_SubpanelQuickCreate_Notes">
			<div id="form_SubpanelQuickCreate_Notes_tabs">
				<textfield id="name" set="{@Case_1380.name} {@user.name} {@stamp}" />
			</div>
			<button id="Notes_subpanel_save_button" />
		</form>

		<wait/>
		<div id="list_subpanel_history">
			<table class="list view">
				<link text="{@Case_1380.name} {@user.name} {@stamp}" click="false" />
				<link class="listViewTdToolsS1" index="1" click="true" />
				<wait timeout="3" />
			</table>
		</div>

		<form id="EditView">
			<textfield id="name" set="{@Case_1380.new_name} {@user.name} {@stamp}" />
			<button value="Save" />
		</form>

		<wait timeout="2" />
		<div id="list_subpanel_history">
			<table class="list view">
				<link text="{@Case_1380.new_name} {@user.name} {@stamp}" click="false" />
			</table>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1380.xml finished." />
</soda>