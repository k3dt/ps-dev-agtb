<soda>
	<!-- Edit Note_Verify that note detail view is displayed after clicking the subject of a note in notes sub-panel -->
	<puts text="Test: Cases_1382.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />
	<timestamp />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create Note-->
	<div id="list_subpanel_history">
		<button value="  Create Note or Attachment  " />
	</div>
	<wait timeout="2" />

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1382.csv" var="Case_1382">
      <div id="DEFAULT">
   		<textfield id="name" set="{@Case_1382.name} {@user.name} {@stamp}" />
      </div>

		<button id="Notes_subpanel_save_button" />
		<wait timeout="7" />
		<div id="list_subpanel_history">
			<table class="list view">
				<link text="{@Case_1382.name} {@user.name} {@stamp}" />
			</table>
		</div>
		<button value="Edit" />

		<textfield id="name" set="{@Case_1382.new_name} {@user.name} {@stamp}" />
		<button value="Save" />

		<link id="moduleTab_Cases" />
		<div class="moduleTitle">
			<link href="index.php?module=Cases&amp;action=index" click="false" />
		</div>

		<button value="Clear" />
		<textfield id="name_basic" set="{@case_record}" />
		<button id="search_form_submit" />
		<link text="{@case_record}" />
		<div id="list_subpanel_history">
			<table class="list view">
				<link text="{@Case_1382.new_name} {@user.name} {@stamp}" click="false" />
			</table>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1382.xml finished." />
</soda>
