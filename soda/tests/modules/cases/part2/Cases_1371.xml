<soda>
	<!-- Edit Scheduled Call: Verify that modification of scheduled call for case can be canceled in "Calls" detail view. -->
	<puts text="Test: Cases_1371.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />
	<timestamp />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create Call-->
	<div id="list_subpanel_activities">
		<button value="  Log Call  " />
	</div>

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1371.csv" var="Case_1371">
		<textfield id="name" set="{@Case_1371.name} {@user.name} {@stamp}" />
		<button id="Calls_subpanel_save_button" />
		<wait timeout="3" />
	</csv>
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Case_1371.name} {@user.name} {@stamp}" click="false" />
		</table>

		<link class="listViewTdToolsS1" index="1" />
	</div>
	<textfield id="name" set="{@Case_1371.new_name} {@user.name} {@stamp}" />
	<button value="Cancel" alert="true" />
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Case_1371.name} {@user.name} {@stamp}" click="false" />
		</table>
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1371.xml finished." />
</soda>