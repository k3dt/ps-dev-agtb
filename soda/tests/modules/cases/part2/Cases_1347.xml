<soda>
	<!-- Create Task_Verify that a task for case is not created when entering non-existing data (such as entering a non-existing Team in "Team" field) for the "Create Task" function -->
	<puts text="Test: Cases_1347.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" var="cases" />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create a task with non-exiting data-->
	<div id="list_subpanel_activities">
		<button value="  Create Task  " />
	</div>
	<csv file="{@global.scriptsdir}/csvs/cases/Case_1347.csv" var="Case_1347">
		<div id="form_SubpanelQuickCreate_Tasks_tabs">
			<textfield id="name" set="{@Case_1347.name}" />
		</div>
		<image id="remove_team_name_collection_0" click="true" />
		<button id="Tasks_subpanel_save_button" />
		<browser assert="No Primary Team specified" />
	</csv>

	<link id="moduleTab_Cases" alert="true" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />

	<puts text="Test: Cases_1347.xml finished." />
</soda>