<soda>
   <!-- Edit Scheduled Meeting_Verify that modification of schedule meeting 
      for case can be canceled 
   -->
	<puts text="Test: Cases_1361.xml starting." />
   <csv file="{@global.scriptsdir}/csvs/cases/CasesAssertText.csv" 
      var="cases" />
	<timestamp />

	<!--Create a case record-->
	<script file="{@global.scriptsdir}/modules/lib/Case_Create_Lib.xml" />
	<var var="case_record" set="{@pre_case_name}" />

	<!--go to the case-->
	<link id="moduleTab_Cases" />
	<div class="moduleTitle">
		<link href="index.php?module=Cases&amp;action=index" click="false" />
	</div>

	<button value="Clear" />
	<textfield id="name_basic" set="{@case_record}" />
	<button id="search_form_submit" />
	<link text="{@case_record}" />

	<!--create a Meeting-->
	<div id="list_subpanel_activities">
      <button value="  Schedule Meeting  " />
      <wait timeout="3" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/cases/Case_1361.csv" var="Case_1361">
      <div id="Default_Meetings_Subpanel">
   		<textfield id="name" set="{@Case_1361.name} {@user.name} {@stamp}" />
      </div>
		<button id="Meetings_subpanel_save_button" />
	</csv>
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Case_1361.name} {@user.name} {@stamp}" click="false" />
		</table>

		<link class="listViewTdToolsS1" index="1" />
	</div>
	<textfield id="name" set="{@Case_1361.new_name} {@user.name} {@stamp}" />
	<button value="Cancel" alert="true" />

	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@Case_1361.name} {@user.name} {@stamp}" click="false" />
		</table>
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	<puts text="Test: Cases_1361.xml finished." />
</soda>
