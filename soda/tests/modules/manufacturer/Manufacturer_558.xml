<soda>
   <puts text="Test: Manufacturer_Record_558.xml" />
   <csv file="{@global.scriptsdir}/csvs/manufacturer/Manufacturer_558.csv"
      var="manufacturer_record_558">
      <!--Manufacturer-Create_Verify that newly created manufacturer can be 
         saved by clicking "Save & Create New" button.
      -->

      <link href="index.php?module=Administration&amp;action=index" />
	   <link text="Manufacturers" />
      <timestamp/>
      <form name="form">
         <button value="Create" />
      </form>

      <table class="edit view">
         <textfield name="name" 
            set="{@manufacturer_record_558.name} {@user.name} {@stamp}" />
         <select name="status" set="{@manufacturer_record_558.status}" />
      </table>
      <button value="Save &amp; Create New" />
      <table class="list view">
         <link text="{@manufacturer_record_558.name} {@user.name} {@stamp}" />
      </table>
      <button value="Save" />
      <hidden name="record" var="manufacturer_id" />
      <table class="list view">
         <browser 
            assert="{@manufacturer_record_558.name} {@user.name} {@stamp}" />
      </table>
      <var var="Manufacturer_558_Name" 
         set="{@manufacturer_record_558.name} {@user.name} {@stamp}"/>
   </csv>

   <!--Run Delete XML-->
   <script file="{@global.scriptsdir}/modules/lib/Manufacturer_Delete_Lib.xml"/>
   <puts text="Test: Manufacturer_Record_558.xml: Finished." />     
</soda>

