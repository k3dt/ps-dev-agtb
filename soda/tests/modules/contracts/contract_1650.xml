<soda>
    	<puts text='----------------Contract_1650:Create Contract_Verify that a contract cannot be created when entering letters for "Contract Value" field, such as "sugar".------------------'/>
		
		<csv file="{@global.scriptsdir}/csvs/contracts/contract_1650.csv" var="Contract_Create_1650">
        <script file='{@global.scriptsdir}/modules/lib/ContractType_Create_Lib.xml'/>
        <script file='{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml'/>
        <timestamp/>
        <link href="index.php?module=Contracts&amp;action=index"/>
        <link text="Create Contract"/>
				<!--User select-->
                <button id='btn_assigned_user_name'/>
                <browser assert='User Search'/>                        
                <textfield id='last_name_advanced' set='{@account_record.assigned_user_name}'/>                        
                <button value='Search'/>
                <link text='{@account_record.assigned_user_name}'/>
                
                <!--Teams select-->
                <table id='EditView_team_name_table'>
                <button value='Select'/>
                </table>
                <browser assert='Team Search'/>
                <textfield name='name' set='{@account_record.team_name}'/> 
                <button value='Search'/>
                <link text='{@account_record.team_name}'/>
                
                <!--Opportunity select-->
                <button id='btn_opportunity_name'/>
                <browser assert='Opportunity Search'/>
                <textfield id='name_advanced' set='{@pre_opp_name}'/> 
                <button value='Search'/>
                <table class="list view">
                <link text='{@pre_opp_name}'/>
                </table>
                
                <!--Account select-->
                <button id='btn_account_name'/>
                <browser assert='Account Search'/>
                <textfield name='name_advanced' set='{@pre_account_name}'/> 
                <button value='Search'/>
                <table class="list view">
                <link text='{@pre_account_name}'/>
                </table>
                
        <form name="EditView">
            <textfield name="name" set="{@Contract_Create_1650.name} {@user.name} {@stamp}"/>
            <textfield id="reference_code" set="{@Contract_Create_1650.reference_code}"/>
            <textfield id="expiration_notice_date" set="{@Contract_Create_1650.expiration_notice_date}"/>
            <select id="expiration_notice_hours" set="{@Contract_Create_1650.expiration_notice_hours}"/>
            <select id="expiration_notice_minutes" set="{@Contract_Create_1650.expiration_notice_minutes}"/>
            <!--select id="expiration_notice_meridiem" set="{@Contract_Create_Lib.expiration_notice_meridiem}"/-->
            <select name="type" set="{@ContractType_Create_Lib}"/>
            <textfield id="description" set="{@Contract_Create_1650.description}"/>
            <select id="status" set="{@Contract_Create_1650.status}"/>
            <textfield id="start_date" set="{@Contract_Create_1650.start_date}"/>
            <textfield id="end_date" set="{@Contract_Create_1650.end_date}"/>
            <select name="currency_id" set="{@Contract_Create_1650.currency_id}"/>
            <textfield id="total_contract_value" set="{@Contract_Create_1650.total_contract_value}"/>
            <textfield name="customer_signed_date" set="{@Contract_Create_1650.customer_signed_date}"/>
            <textfield name="company_signed_date" set="{@Contract_Create_1650.company_signed_date}"/>
            <button value="Save" name="button"/>
        
		<browser assert='Invalid Value: Contract Value'/>
		</form>
        </csv>      
        <button value="Cancel" alert="true" />  <!-- bug 39160 -->
            
			<!--Delete the records-->
		<script file='{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml'/>
		<script file='{@global.scriptsdir}/modules/lib/ContractType_Delete_Lib.xml'/>
		<script file='{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml'/>
		
		<puts text='-------------------Contract_1650: finished-------------------'/>
</soda>
