<soda>
    <puts text='---User_bug_38360:check that we can enable and disable grouped modules ---Start!'/>
    <timestamp/>
    <!--login-->
	<csv file="{@global.scriptsdir}/csvs/users.csv" var="user" />
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />

    <!--goto Admin user edit page-->
    <div id='welcome'>
        <link href='index.php?module=Users&amp;action=EditView&amp;record=1'/>
    </div>
    
    <browser assert='Users'/>
    
    <checkbox name='use_group_tabs' set='true' />
    
    <button id='Save' alert='true'/>

    <!-- Head home -->
    <link href='index.php?module=Home&amp;action=index' />

    <div id='themeTabGroupMenu_Sales' exist='true'/>

    <!--goto Admin user edit page to undo the group tabs change-->
    <div id='welcome'>
        <link href='index.php?module=Users&amp;action=EditView&amp;record=1'/>
    </div>
    
    <browser assert='Users'/>
    
    <checkbox name='use_group_tabs' click='true' />
    <checkbox name='use_group_tabs' set='false' />
    
    <button id='Save' alert='true'/>

    <!-- Head home -->
    <link href='index.php?module=Home&amp;action=index' />

    <div id='themeTabGroupMenu_Sales' exist='false'/>

    <puts text='---User_bug_38360:check that we can enable and disable grouped modules ---Finished!'/>
</soda>
