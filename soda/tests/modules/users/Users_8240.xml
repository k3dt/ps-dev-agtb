            <textfield id='address_country' set='{@users_record_8240.country}'/>
            <textfield id='Users0emailAddress0' set='{@users_record_8240.email_address}'/>
            <wait timeout='5'/>
            <button value='Save'/>
            <browser assert='{@users_record_8240.first_name} {@users_record_8240.last_name}{@stamp}'/>
