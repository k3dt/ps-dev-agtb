        <div id='globalLinks'>
              <link text='Admin'/>
        </div>
        <browser assert='Administration'/>
        <link href='./index.php?module=Users&amp;action=index'/>
        <browser assert='Users'/>
        <!--create portal user-->
        <link text='Create Portal API User'/>
