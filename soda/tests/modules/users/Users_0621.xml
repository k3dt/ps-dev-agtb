             <textfield name='sugar_user_name' set='{@User0621.name}{@stamp}'/>
             <textfield id='unique_name' set='{@User0621.username}{@stamp}'/>
             <select name='status' set='{@User0621.status}'/>
             <textfield id='Users0emailAddress0' set='{@User0621.email_address}'/>
