<soda>
    
    <!-- average and ceil function test -->
    <puts text="Test: Studio_10094_10097.xml starting" />
    <!-- set description field as calculated field and define formula -->
    <timestamp />
    <link text="Admin" />
    <link text="Studio" assertPage="false" />
    <link text="Accounts" class="studiolink" assertPage="false" />
    <link text="Fields" class="studiolink" assertPage="false" />
    <link text="description" class="mbLBLL" assertPage="false" />
    <checkbox id="calculated" set="true" />
    <wait timeout="1" />
    <button value="Edit Formula" />
    <wait timeout="3" />
    <browser assert="Formula Builder" />
    <div id="formulaBuilderWindow" >
      <textfield id="formulaInput" set="average(ceil(number($billing_address_street)),ceil(number($billing_address_city)),ceil(number($billing_address_state)))" />
      <button value="Save" />
    </div>
    <wait timeout="3" />
    <form id="popup_form_id" >
      <button name="fsavebtn" assertPage="false" />
    </form>
    <wait timeout="3" />
    
    <!--create account record and check calculated field-->
    <link id="moduleTab_Accounts" />
      
    <!--whitelist action="add" name="tmp-white">Error: '' is not a number</whitelist-->
    <csv file="{@global.scriptsdir}/csvs/studio/Studio_10094.csv" var="studio10094">
        <link text="Create Account" />
        <browser assert="Create" />
        <form id="EditView">
        <textfield id="name" set="{@studio10094.name} {@user.name} {@stamp}" />
        <textfield id="billing_address_street" set="{@studio10094.street}" />
        <textfield id="billing_address_city" set="{@studio10094.city}" />
        <textfield id="billing_address_state" set="{@studio10094.state}" />
        <textfield id="description" assert="{@studio10094.des}" />
        <button value="Save" />
      </form>
      <wait timeout="3" />
      <browser assert="{@studio10094.name} {@user.name} {@stamp}" />
      <table id="detailpanel_1">
        <span id="description" assert="{@studio10094.des}" />
      </table>
    </csv>
    <!--whitelist action="delete" name="tmp-white" /-->
    <!-- Now uncalculated the field -->
    <link text="Admin" />
    <link text="Studio" assertPage="false" />
    <link text="Accounts" class="studiolink" assertPage="false" />
    <link text="Fields" class="studiolink" assertPage="false" />
    <link text="description" class="mbLBLL" assertPage="false" />
    <checkbox id="calculated" set="false" />
    <form id="popup_form_id" >
      <browser assertnot="Formula Builder" />
      <button name="fsavebtn" assertPage="false" />
    </form>
    <wait timeout="3" />
    
    <!-- Delete account record -->
    <script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
    
    <puts text="Test: Studio_10094_10097.xml finished." />
</soda>