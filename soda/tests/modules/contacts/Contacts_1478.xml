<soda>
	<!--
		Edit call_Verify that a related call can be edited from contact detail view..
	-->
	<puts text="Test: Contacts_1478.xml starting." />


	<!--Create contact record & task subpanel-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	<link text="Basic Search" required="false" />
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>

	<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />

	<!--goto Activities subpanel & click "Log Call"-->
	<button value="  Log Call  " />
	<wait timeout="3" />
	<button id="Calls_subpanel_full_form_button" />
	<div class="moduleTitle">
		<link href="index.php?module=Calls&amp;action=index" click="false" />
	</div>
	<csv file="{@global.scriptsdir}/csvs/contacts/Contacts_1477.csv" var="contact_record_1477">
		<textfield id="name" set="{@contact_record_1477.name} {@user.name} {@stamp}" />
		<textfield id="description" set="{@contact_record_1477.description}" />

		<!--Start Date-->
		<textfield id="date_start_date" set="{@contact_record_1477.date_start_date}" />
		<select id="date_start_hours" set="{@contact_record_1477.date_start_hours}" />
		<select id="date_start_minutes" set="{@contact_record_1477.date_start_minutes}" />

		<!-- Search invitiees -->
		<div class="schedulerInvitees">
			<button value="Search" />
		</div>
		<wait timeout="3" />

		<div id="list_div_win">
			<button value="Add" />
		</div>
		<wait timeout="3" />

		<button value="Save" />

		<wait timeout="5" />

		<!--Verify the task record created in subpanel-->
		<div id="list_subpanel_activities">
			<table class="list view">
				<link text="{@contact_record_1477.name} {@user.name} {@stamp}" click="false" />
			</table>
		</div>
	</csv>

	<!-- Edit call -->
	<div id="list_subpanel_activities">
		<link class="listViewTdToolsS1" index="1" alert="true" />
	</div>
	<wait timeout="3" />
	<csv file="{@global.scriptsdir}/csvs/contacts/Contacts_1477.csv" var="contact_record_1477">
		<textfield id="name"
			set="{@contact_record_1477.new_name} {@user.name} {@stamp}" />
	</csv>

	<button value="Save" />

	<wait timeout="5" />
	<!--Verify the edited call record in subpanel-->
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@contact_record_1477.new_name} {@user.name} {@stamp}"
				click="false" />
		</table>
	</div>


	<!--Delete contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<puts text="Test: Contacts_1478.xml finished." />
</soda>
