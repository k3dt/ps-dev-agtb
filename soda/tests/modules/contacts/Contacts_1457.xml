<soda>
	<!--
		Mass update_Verify that the selected contact can be updated by "Mass Update"
		function.
	-->
	<puts text="Test: Contacts_1457.xml starting." />

	<!--Create contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<button id="search_form_submit" />
	<checkbox name="massall" set="true" />

	<!--mass update-->
	<csv file="{@global.scriptsdir}/csvs/contacts/Contacts_1457.csv" var="contact_record_1457">
		<select name="Sync" set="{@contact_record_1457.Sync}" />
		<select id="mass_do_not_call" set="{@contact_record_1457.mass_do_not_call}" />
		<select id="mass_lead_source" set="{@contact_record_1457.mass_lead_source}" />
		<select id="mass_opportunity_role" set="{@contact_record_1457.mass_opportunity_role}" />
	</csv>
	<button id="update_button" alert="true" />

	<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	<browser assert="{@contact_record_1457.mass_lead_source}" />

	<!--Delete contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<puts text="Test: Contacts_1457.xml finished." />

</soda>
