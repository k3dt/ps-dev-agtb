<soda>
	<!--
		Edit note or attachment_Verify that a related note or attachment can be edited
		from contact detail view.
	-->
	<puts text="Test: Contacts_1484.xml starting." />

	<!--Create contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the Contact record-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>

	<!--Create Note/Attachment via subpanel-->
	<csv file="{@global.scriptsdir}/csvs/contacts/Contacts_1484.csv" var="contact_note_1484">
		<div id="list_subpanel_history">
			<button value="  Create Note or Attachment  " />
		</div>
		<wait timeout="5" />
		<textfield id="name" set="{@contact_note_1484.name}" />
		<textfield id="name" set="{@contact_note_1484.name}" />

		<form id="form_SubpanelQuickCreate_Notes">
			<button value="Save" />
		</form>
	</csv>
	<wait timeout="10" />

	<!-- Verify the creation of the Note/Attachment -->
	<div id="list_subpanel_history">
		<link text="{@contact_note_1484.name}" click="false" />
	</div>

	<!-- Edit Note/Attachment via "edit" button in subpanel -->
	<div id="list_subpanel_history">
		<link class="listViewTdToolsS1" index="1" />
	</div>
	<wait timeout="3" />

	<textfield id="name" set="{@contact_note_1484.new_name}" />
	<button value="Save" />
	<wait timeout="5" />

	<!-- Verify edits -->
	<div id="list_subpanel_history">
		<link text="{@contact_note_1484.new_name}" click="false" />
	</div>

	<!--Delete records-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<puts text="Test: Contacts_1484.xml finished." />
</soda>
