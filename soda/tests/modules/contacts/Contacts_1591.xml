<soda>

	<!--
		Contact Detail - History sub-panel_Verify that the history summary is
		displayed without any errors from contact detail view.
	-->
	<puts text="Test: Contacts_1591.xml starting." />

	<!--Make sure at least one contact exist-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Go to Contact module-->
	<link id="moduleTab_Contacts" />
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
	</div>

	<!--Search created record from basic search-->
	<form id="search_form">
		<checkbox id="current_user_only_basic" set="false" required="false" />
		<textfield id="search_name_basic" set="{@pre_contact_first_name}" />
	</form>
	<button id="search_form_submit" />

	<!--Select search result from list view and go to detail view-->
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>

	<!--Go to History subpanel and click view summary button-->
	<div id="list_subpanel_history">
		<button id="summary_button" />
	</div>

	<!--Validate new tab open right-->
	<div class="moduleTitle">
		<link href="index.php?module=Contacts&amp;action=index" click="false" />
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</div>

	<!--Can't close this new tab and use URL go back-->
	<browser send_keys="Ctrl+W" />
	<attach title="/Contacts/">
		<wait timeout="3" />
	</attach>

	<!--Delete created contact-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_lib.xml" />

	<puts text="Test: Contacts_1591.xml finished." />
</soda>
