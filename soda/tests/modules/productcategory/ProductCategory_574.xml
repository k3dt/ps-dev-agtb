<soda>
    <puts text="---ProductCategory_574.xml: Product Category Create: Verify that product category can be saved by clicking 'Save and Create New' button.---Start!"/>
   <csv file="{@global.scriptsdir}/csvs/productcategory/ProductCategory_574.csv" var="category_record_574">
        <link text="Admin"/>
        <link text="Product Categories"/>
        <timestamp/>
        <form name="form">
            <button id="btn_create"/>
        </form>

        <table class="edit view">
            <textfield id="name" set="{@category_record_574.name} {@user.name} {@stamp}"/>
            <textfield id="list_order" set="{@category_record_574.list_order}"/>
        </table>
        <button value="Save &amp; Create New"/>

        <table class="list view">
            <browser assert="{@category_record_574.name} {@user.name} {@stamp}"/> 
            <browser assert="{@category_record_574.list_order}"/>
        </table>
    </csv>

    <!--Run Delete XML-->
    <!-- After clicking "Save & Create New", the hidden record becomes empty.  Hence we
         can't use ProductCategory_Delete_Lib.xml to delete this record.  Need to delete
         it manually.  For the manual deletion to work, there shouldn't be other existing
         Product Categories at all.
    -->
    <table class="list view">
        <link text="del" alert="true"/>
    </table>
    <browser assert="{@category_record_574.name} {@user.name} {@stamp}" exist="false"/>
    <puts text="---ProductCategory_574.xml---Finished!"/>  
</soda>
