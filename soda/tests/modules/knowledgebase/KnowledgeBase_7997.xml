<soda>
    <puts text='--------Knowledge Base_7997: Knowledge Base_edit article--------'/>
    
    <script file='{@global.scriptsdir}/modules/lib/KnowledgeBase_Create_Lib.xml'/>
    <browser assert='{@KB_Name}'/>
    <button value='Edit'/>
    
    <csv file='{@global.scriptsdir}/csvs/knowledgebase/knowledgebase_7997.csv' var='knowledgebase_7997'>
        <!--Author select-->
        <button name='btn_author'/>
        <browser assert='User Search'/>                        
        <textfield name='last_name_advanced' set='{@knowledgebase_7997.author}'/>                        
        <button value='Search'/>        
        <link text='{@knowledgebase_7997.author}'/>
        
        <!--Teams select-->
        <table id='EditView_team_name_table'>
            <button value='Select'/>
        </table>
        <browser assert='Team Search'/>
        <textfield name='name' set='{@knowledgebase_7997.team}'/> 
        <button value='Search'/>
        <link text='{@knowledgebase_7997.team}'/>
         
        <!--Article body-->
        <link id='body_html_code'/>
        <textfield id='htmlSource' set='{@knowledgebase_7997.body}'/>
        <button value='Update'/>
                        
        <form id='EditView'>
            <textfield name='kbdocument_name' set='{@knowledgebase_7997.name} {@user.name} {@stamp}'/> 
            <select id='status_id' set='{@knowledgebase_7997.status}'/>
            <textfield name='kbdocument_revision_number' set='{@knowledgebase_7997.revision}'/>
            <textfield name='exp_date' set='{@knowledgebase_7997.exp_date}'/>         
            <button value='Save'/>
        </form>
        <browser assert='{@knowledgebase_7997.name} {@user.name} {@stamp}'/>
        <span id='more_details_img' click='true'/>
        <browser assert='{@knowledgebase_7997.author}'/>
        <browser assert='{@knowledgebase_7997.revision}'/>
        <browser assert='{@knowledgebase_7997.status}'/>
        <browser assert='{@knowledgebase_7997.exp_date}'/>
        <browser assert='{@knowledgebase_7997.team}'/>
        <browser assert='{@knowledgebase_7997.body}'/>
    </csv>
    
    <!--Delete the record-->
    <script file='{@global.scriptsdir}/modules/lib/KnowledgeBase_Delete_Lib.xml'/>
    
    
    <puts text='--------Knowledge Base_7997: Finished--------'/>
</soda>
