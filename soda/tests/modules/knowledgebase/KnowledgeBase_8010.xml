<soda>
        <puts text='--------Knowledge Base_8010: search_status--------'/>
        
        <link id='moduleTab_KBDocuments'/>
        <browser assert='Knowledge Base'/>
        
        <!--Create records-->
        <csv file='{@global.scriptsdir}/csvs/knowledgebase/KnowledgeBase_80101.csv' var='knowledgebase_80101'>
            <link text='Create Article'/>
            <browser assert='Create'/>
            <!--Author select-->
            <button name='btn_author'/>
            <browser assert='User Search'/>                        
            <textfield name='last_name_advanced' set='{@knowledgebase_80101.author}'/>                        
            <button value='Search'/>
            <link text='{@knowledgebase_80101.author}'/>
        
            <!--Teams select-->
            <table id='EditView_team_name_table'>
                <button value='Select'/>
            </table>
            <browser assert='Team Search'/>
            <textfield name='name' set='{@knowledgebase_80101.team}'/> 
            <button value='Search'/>
            <link text='{@knowledgebase_80101.team}'/>

            <!--Select tags-->
            <button name='btn_tags'/>
            <link id='ygtvlabelel2'/>

            <!--Article body-->
            <link id='body_html_code'/>
            <textfield id='htmlSource' set='{@knowledgebase_80101.body}'/>
            <button value='Update'/>

            <form id='EditView'>
                <textfield name='kbdocument_name' set='{@knowledgebase_80101.name}'/>
                <textfield name='kbdocument_revision_number' set='{@knowledgebase_80101.revision}'/>
                <select id='status_id' set='{@knowledgebase_80101.status}'/>
                <button value='Save'/>
            </form>
            <browser assert='{@knowledgebase_80101.name}'/>            
        </csv>
        
        <!--Search by status-->
        <csv file='{@global.scriptsdir}/csvs/knowledgebase/KnowledgeBase_80102.csv' var='knowledgebase_80102'>
            <link text='View Articles'/>
            <link id='advanced_tab_link'/>
            <button id='clearForm'/>
            
            <select name='status_id' set='{@knowledgebase_80102.search}'/>
            <button id='fts_search_ADV'/>
            <table class='list view'>
                <span class='pageNumbers' assert='(1 - 1 of 1)'/>
                <link text='{@knowledgebase_80102.name}' click='false'/>
            </table>
            
        </csv>
        
        <!--Delete the record-->
        <script file='{@global.scriptsdir}/modules/lib/KnowledgeBase_Delete_Lib.xml'/>
        
        
        <puts text='--------Knowledge Base_8010: Finished--------'/>
</soda>
