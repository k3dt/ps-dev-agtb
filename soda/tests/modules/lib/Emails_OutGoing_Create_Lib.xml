<soda>
	<puts text="Lib: Emails_OutGoing_Create.xml starting." />
	<link id="moduleTab_Emails" />
	<button id="settingsButton" />
  <wait timeout="10" />
  <div id="settingsDialog_c" >
	  <link text="Mail Accounts" />
  </div>
	<browser assert="Outgoing SMTP Mail Servers" />
	<browser
		assert="Provide SMTP mail server information to use for outgoing email in Mail Accounts" />

	<button id="outbound_email_add_button" />

	<csv file="{@global.scriptsdir}/modules/lib/Email_OutGoing_Create_Lib.csv"
		var="EmailOutGoing" />
	<wait timeout="3" />
	<textfield id="mail_name" set="{@EmailOutGoing.mail_name}" />
	<textfield id="mail_smtpserver" set="{@EmailOutGoing.mail_smtpserver}" />
	<textfield id="mail_smtpport" set="{@EmailOutGoing.mail_smtpport}" />
	<select id="mail_smtpssl" set="{@EmailOutGoing.mail_smtpssl}" />
	<checkbox id="mail_smtpauth_req" set="{@EmailOutGoing.mail_smtpauth_req}" />
	<textfield id="mail_smtpuser" set="{@EmailOutGoing.mail_smtpuser}" />
	<textfield id="mail_smtppass" set="{@EmailOutGoing.mail_smtppass}" />
	<button value="   Send Test Email   " />
	<textfield id="outboundtest_from_address" set="eyang@sugarcrm.com" />
	<button value="   Send   " />
	<wait timeout="20" />
	<browser
		assert="An email was sent to the specified email address using the provided outgoing mail settings." />
  <div id="sugarMsgWindow" >
	  <link class="container-close" />
  </div>
	<wait timeout="2" />
	<form id="outboundEmailForm">
		<button value="   Done   " />
	</form>
	<wait timeout="2" />
	<div id="settingsDialog">
		<link text="Close" />
	</div>
	<puts text="Lib: Emails_OutGoing_Create.xml finished." />
</soda> 
