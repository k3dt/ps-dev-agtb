<soda>
	<puts text="Lib: Role_Create_Lib.xml starting." />
	<timestamp />
	<link text="Admin" />
	<link text="Role Management" />
	<browser assert="Roles" />
	<link text="Create Role" />
	<csv file="{@global.scriptsdir}/modules/lib/Role_Create_Lib.csv" var="role_record">
		<textfield id="name" set="{@role_record.name} {@user.name} {@stamp}" />
		<textfield id="name" set="{@role_record.name} {@user.name} {@stamp}" />
		<textfield name="description" set="{@role_record.description}" />
		<button value="Save" />
		<browser assert="{@role_record.name} {@user.name} {@stamp}" />

		<form name="DetailView">
			<hidden name="record" var="pre_role_id" />
		</form>
		<var var="pre_role_name" set="{@role_record.name} {@user.name} {@stamp}" />
	</csv>
	<puts text="Lib: Role_Create_Lib.xml finished." />
</soda>

