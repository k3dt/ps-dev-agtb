<soda>
	<puts text="Lib: Project_Create_Lib.xml starting." />
	<timestamp />
	<link id="moduleTab_Project" />
	<wait condition="true">
		<link text="Create Project" />
	</wait>
	<csv file="{@global.scriptsdir}/modules/lib/Project_Create_Lib.csv" var="project_record">

		<link text="Create Project" />
		<browser assert="Create" />

		<form id="EditView">
			<textfield id="name" set="{@project_record.name} {@user.name} {@stamp}" />
			<textfield id="estimated_start_date" set="{@project_record.estimated_start_date}" />
			<textfield id="estimated_end_date" set="{@project_record.estimated_end_date}" />

			<textfield id="description" set="{@project_record.description}" />
			<button value="Save" />
		</form>
		<wait timeout="3" />
		<browser assert="{@project_record.name} {@user.name} {@stamp}" />

		<!--Save the project id & name-->
		<form name="DetailView">
			<hidden name="record" var="pre_project_id" />
		</form>

		<var var="pre_project_name" set="{@project_record.name} {@user.name} {@stamp}" />
	</csv>

	<puts text="Lib: Project_Create_Lib.xml finished." />
</soda>
