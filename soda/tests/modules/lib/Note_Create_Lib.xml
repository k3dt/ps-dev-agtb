<soda>
	<puts text="Lib: Note_Create_Lib.xml starting." />
	<timestamp />
	<link id="moduleTab_Notes" />
	<link text="Create Note or Attachment" />
	<csv file="{@global.scriptsdir}/modules/lib/Note_Create_Lib.csv" var="note_record">
		<textfield id="name" set="{@note_record.name} {@user.name} {@stamp}" />
		<textfield id="description" set="{@note_record.description}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>

		<browser assert="Team Search" />
		<textfield name="name" set="{@note_record.team_name}" />
		<button value="Search" />
		<link text="{@note_record.team_name}" />
		<button value="Save" />

		<browser assert="{@note_record.name} {@user.name} {@stamp}" />

		<!--Save the record id & name-->
		<form name="DetailView">
			<hidden name="record" var="pre_note_id" />
		</form>
		<var var="pre_note_name" set="{@note_record.name} {@user.name} {@stamp}" />
	</csv>
	<puts text="Lib: Note_Create_Lib.xml finished." />
</soda>

