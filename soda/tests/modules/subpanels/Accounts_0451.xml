<soda>
	<!--
		Prompt message is displayed when creating a product with invalid value entered
		in " Cost " field from an account detail view.
	-->
	<puts text="Test: Accounts_0451.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create product Subpanel -->
	<div id="list_subpanel_products">
		<button name="Products_create_button" />
	</div>
	<browser assert="Products" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0077.csv" var="product_record_0451">
		<textfield id="name" set="{@product_record_0451.name} {@user.name} {@stamp}" />
		<textfield id="quantity" set="{@product_record_0451.quantity}" />
		<textfield id="serial_number" set="{@product_record_0451.serial_number}" />
		<textfield id="asset_number" set="{@product_record_0451.asset_number}" />
		<textfield id="date_purchased" set="{@product_record_0451.date_purchased}" />
		<textfield id="date_support_starts" set="{@product_record_0451.date_support_starts}" />
		<textfield id="date_support_expires" set="{@product_record_0451.date_support_expires}" />
		<textfield id="cost_price" set="abc" />
		<textfield id="list_price" set="{@product_record_0451.list_price}" />
		<textfield id="discount_price" set="{@product_record_0451.discount_price}" />
		<textfield id="discount_amount" set="{@product_record_0451.discount_amount}" />
		<textfield id="book_value" set="{@product_record_0451.book_value}" />
		<textfield id="book_value_date" set="{@product_record_0451.book_value_date}" />
		<textfield id="website" set="{@product_record_0451.website}" />
		<textfield id="mft_part_num" set="{@product_record_0451.mft_part_num}" />
		<textfield id="vendor_part_num" set="{@product_record_0451.vendor_part_num}" />
		<textfield id="description" set="{@product_record_0451.description}" />
		<textfield id="support_name" set="{@product_record_0451.support_name}" />
		<textfield id="support_description" set="{@product_record_0451.support_description}" />
		<textfield id="weight" set="{@product_record_0451.weight}" />

		<select id="status" set="{@product_record_0451.status}" />
		<select name="currency_id" set="{@product_record_0451.currency_id}" />
		<checkbox id="discount_select" set="{@product_record_0451.discount_select}" />
		<select id="category_id" set="{@product_record_0451.category_id}" />
		<select id="tax_class" set="{@product_record_0451.tax_class}" />

		<button value="Save" />
		<browser assert="Invalid Value: Cost" />
	</csv>
	<link id="moduleTab_Accounts" alert="true" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0451.xml finished." />
</soda>
            
            
            
