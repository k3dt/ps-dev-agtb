<soda>
	<puts text="Test: Accounts_0276.xml starting." />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<form id="search_form">
		<link text="Basic Search" required="false" />
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>
	<browser assert="{@pre_account_name}" />

	<button name="account_contracts_create_button" />
	<wait timeout="5" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0094.csv" var="contract_record_0094">
		<form id="form_SubpanelEditView_Contracts">
			<textfield id="name" set="{@contract_record_0094.name} {@stamp}" />
			<select id="status" set="{@contract_record_0094.status}" />
			<textfield id="reference_code" set="{@contract_record_0094.reference_code}" />
			<textfield id="start_date" set="{@contract_record_0094.start_date}" />
			<textfield id="end_date" set="{@contract_record_0094.end_date}" />
			<textfield id="total_contract_value" set="{@contract_record_0094.total_contract_value}" />
			<textfield id="customer_signed_date" set="{@contract_record_0094.customer_signed_date}" />
			<textfield id="company_signed_date" set="{@contract_record_0094.company_signed_date}" />
			<textfield id="expiration_notice_date" set="{@contract_record_0094.expiration_notice_date}" />
			<select id="expiration_notice_hours" set="{@contract_record_0094.expiration_notice_hours}" />
			<select id="expiration_notice_minutes" set="{@contract_record_0094.expiration_notice_minutes}" />
			<textarea id="description" set="{@contract_record_0094.description}" />
		</form>
		<button id="Contracts_subpanel_save_button" />
	</csv>

	<wait timeout="20" />
	<browser assert="{@contract_record_0094.name} {@stamp}" />
	<link text="{@contract_record_0094.name} {@stamp}" />

	<!--Save the subpanel contract id & name-->
	<form name="DetailView">
		<hidden name="record" var="pre_contract_subpanel_id" />
	</form>
	<var var="pre_contract_subpanel_name" set="{@contract_record_0094.name} {@stamp}" />

	<table id="detailpanel_1">
		<browser assert="{@contract_record_0094.name} {@stamp}" />
		<browser assert="{@contract_record_0094.status}" />
		<browser assert="{@contract_record_0094.reference_code}" />
		<browser assert="{@contract_record_0094.start_date}" />
		<browser assert="{@contract_record_0094.end_date}" />
		<browser assert="{@contract_record_0094.contract_value}" />
		<browser assert="{@contract_record_0094.customer_signed_date}" />
		<browser assert="{@contract_record_0094.company_signed_date}" />
		<browser assert="{@contract_record_0094.description}" />
	</table>
	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--click edit-->
	<div id="list_subpanel_contracts">
		<table class="list view">
			<link text="{@pre_contract_subpanel_name}" click="false" />
		</table>
		<link class="listViewTdToolsS1" index="1" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0100.csv" var="contract_record_0276">
		<textfield name="name" set="{@contract_record_0276.name} {@user.name} {@stamp}" />
		<textfield id="reference_code" set="{@contract_record_0276.reference_code}" />
		<textfield id="expiration_notice_date" set="{@contract_record_0276.expiration_notice_date}" />
		<select id="expiration_notice_hours" set="{@contract_record_0276.expiration_notice_hours}" />
		<select id="expiration_notice_minutes" set="{@contract_record_0276.expiration_notice_minutes}" />

		<textfield id="description" set="{@contract_record_0276.description}" />
		<select id="status" set="{@contract_record_0276.status}" />
		<textfield id="start_date" set="{@contract_record_0276.start_date}" />
		<textfield id="end_date" set="{@contract_record_0276.end_date}" />
		<textfield id="total_contract_value" set="{@contract_record_0276.total_contract_value}" />
		<textfield name="customer_signed_date" set="{@contract_record_0276.customer_signed_date}" />
		<textfield name="company_signed_date" set="{@contract_record_0276.company_signed_date}" />
		<button value="Cancel" alert="true" />

		<div id="list_subpanel_contracts">
			<table class="list view">
				<link text="{@pre_contract_subpanel_name}" click="false" />
			</table>
		</div>
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contract_Delete_Lib.xml" />
	<puts text="Test: Accounts_0276.xml finished." />
</soda>
