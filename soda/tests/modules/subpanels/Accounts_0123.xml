<soda>
	<!--
		Account Detail - Bugs sub-panel -Select_Verify that corresponding bug records
		are displayed using search function on the select bugs pop-up box.
	-->
	<puts text="Test: Accounts_0123.xml starting." />

	<!-- Create a bug record -->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />

	<!-- Create an account record -->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!-- Select bug to relate to account -->
	<div id="list_subpanel_bugs">
		<button id="accounts_bugs_select_button" />
	</div>
	<textfield id="name_advanced" set="{@pre_bug_name}" />
	<button value="Search" />
	<wait timeout="1" />
	<!-- Verify pop up list view -->
	<table class="list view">
		<link text="{@pre_bug_name}" click="false" />
	</table>
	
	<!-- For clean up purposes -->
	<table class="list view">
		<link text="{@pre_bug_name}" />
	</table>
	

	<!-- Run Delete XML -->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

	<puts text="Test: Accounts_0123.xml finished" />
</soda>
