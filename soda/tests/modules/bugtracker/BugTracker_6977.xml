<soda>
	<!-- Detail View_Verify that the selected records are displayed in "CONTACTS" sub-panel list view of Bug Tracker. -->
	<puts text="Test: BugTracker_6977.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/bugtracker/BugTrackerAssertText.csv" var="bugtracker" />
	<timestamp />

	<!--Create a bug and a contact record-->
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />

	<!--Search the bug tracker record-->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<textfield id="name_basic" set="{@pre_bug_name}" /> 
	<button id="search_form_submit" />

	<!--Goto its detail view-->
	<table class="list view">
		<link text="{@pre_bug_name}" />
	</table>
	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />

	<div id="subpanel_contacts">
		<button id="contacts_bugs_select_button" />
	</div>
	<browser assert="Contact Search" />
	<textfield id="last_name_advanced" set="{@pre_contact_last_name}" />
	<textfield id="first_name_advanced" set="{@pre_contact_first_name}" />
	<button value="Search" />
	<table class="list view">
		<link text="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</table>

	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />

	<div id="list_subpanel_contacts">
		<browser assert="{@pre_contact_first_name} {@pre_contact_last_name}" />
	</div>

	<!--Delete the records-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />

	<puts text="Test: BugTracker_6977.xml finished." />
</soda>
