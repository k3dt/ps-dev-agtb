<soda>
	<!-- Detail View_Verify that the editing record is canceled with the page transferring to its detail view. -->
 	<puts text="Test: BugTracker_0647.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/bugtracker/BugTrackerAssertText.csv" var="bugtracker" />
	<timestamp />

	<!--Create bug tracker record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />

	<!--Search the bug tracker record-->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>
	
	<textfield id="name_basic" set="{@pre_bug_name}" /> 
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_bug_name}" />
	</table>
	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />


	<button id="edit_button" />

	<csv file="{@global.scriptsdir}/csvs/bugtracker/Bug Tracker_0633.csv" var="bug_tracker_record_647">
		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@bug_tracker_record_647.assigned_user_name}" />
		<button value="Search" />
		<link text="{@bug_tracker_record_647.assigned_user_name}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@bug_tracker_record_647.team_name}" /> 
		<button value="Search" />
		<link text="{@bug_tracker_record_647.team_name}" />

		<!--fill the fields and "Cancel"-->
		<form id="EditView">
			<textfield name="name" set="{@bug_tracker_record_647.name} {@user.name} {@stamp}" />
			<select id="priority" set="{@bug_tracker_record_647.priority}" />
			<select id="source" set="{@bug_tracker_record_647.source}" />
			<select id="type" set="{@bug_tracker_record_647.type}" />
			<select id="product_category" set="{@bug_tracker_record_647.product_category}" />
			<textfield id="description" set="{@bug_tracker_record_647.description}" />
			<select id="status" set="{@bug_tracker_record_647.status}" />
			<select id="resolution" set="{@bug_tracker_record_647.resolution}" />
			<button value="Cancel" alert="true" />
		</form>
	</csv>
	<browser assert="{@bug_tracker_record_647.name} {@user.name} {@stamp}" exist="false" />
	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />

 	<puts text="Test: BugTracker_0647.xml finished." />
</soda>
