<soda>
	<!-- Create Bug_Verify that the detail of duplicated bug is displayed after saving a duplicated bug. -->
	<puts text="Test: BugTracker_3589.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/bugtracker/BugTrackerAssertText.csv" var="bugtracker" />
	
	<timestamp />
	<!--Create bug tracker record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib.xml" />

	<!--Search the bug tracker record-->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<textfield id="name_basic" set="{@pre_bug_name}" /> 
	<button id="search_form_submit" />

	<table class="list view">
		<link text="{@pre_bug_name}" />
	</table>
	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />

	<!--duplicate this record-->
	<button id="duplicate_button" />
	<div class="moduleTitle" assert="{@pre_bug_name}" click="false" />

	<csv file="{@global.scriptsdir}/csvs/bugtracker/Bug Tracker_3589.csv" var="bug_record_3589">
		<form id="EditView">
			<textfield id="name" set="{@bug_record_3589.name} {@user.name} {@stamp}" /> 
			<textfield id="description" set="{@bug_record_3589.description}" />
			<button value="Save" />
		</form>

		<div class="moduleTitle">
			<link href="index.php?module=Bugs&amp;action=index" click="false" />
			<browser assert="{@bug_record_3589.name} {@user.name} {@stamp}" />
		</div>

		<!--Delete the record-->
		<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />
	</csv>

	<puts text="Test: BugTracker_3589.xml finished." />
</soda>