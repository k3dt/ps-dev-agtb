<soda>
	<!-- search_bug_with_advanced_search -->
	<puts text="Test: BugTracker_8052.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/bugtracker/BugTrackerAssertText.csv" var="bugtracker" />
	<timestamp />

	<!--Create bug tracker record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Create_Lib_Full.xml" />

	<!--Search the bug tracker record with advanced search condition-->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<link text="Advanced Search" />
	<wait timeout="1" />
	<textfield id="name_advanced" set="{@pre_bug_name}" /> 
	<select name="resolution_advanced[]" set="{@bug_record.resolution}" />
	<select name="type_advanced[]" set="{@bug_record.type}" />
	<select name="status_advanced[]" set="{@bug_record.status}" />
	<select name="priority_advanced[]" set="{@bug_record.priority}" />
	<button id="search_form_submit" />

	<table class="list view">
		<link text="{@pre_bug_name}" click="false" />
	</table>

	<!-- Reset initial search state. -->
	<link id="moduleTab_Bugs" />
	<div class="moduleTitle">
		<link href="index.php?module=Bugs&amp;action=index" click="false" />
	</div>

	<link text="Basic Search" />
	<wait timeout="1" />
	<button id="search_form_clear" />
	<button id="search_form_submit" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Bug_Delete_Lib.xml" />

	<puts text="Test: BugTracker_8052.xml finished." />
</soda>