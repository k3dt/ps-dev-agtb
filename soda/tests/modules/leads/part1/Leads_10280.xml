<soda>
	<!--
		Actions:
			a)    Login SugarCRM as valid user
			b)    Go to Leads module
			c)    Create a new Lead record with salutation
			d)    Go to Lead List/Detail View
			e)    Check salutation show correctly
		Expected Results:
			Salutation will show correctly in respective views...
	-->


	<puts text="Test: Leads_10280.xml starting." />

	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />
	<var var="lead1_name" set="{@pre_lead_first_name} {@pre_lead_last_name}" />

	<button id="edit_button" />
	
	<select name="salutation" set="Mr." />
	<button value="Save" />
	
	<browser assert="Mr. {@lead1_name}" />
	
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>

	<browser assert="Mr. {@lead1_name}" />
	
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	
	<puts text="Test: Leads_10280.xml finished." />
</soda>