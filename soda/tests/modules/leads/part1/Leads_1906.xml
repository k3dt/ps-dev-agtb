	<span class="pageNumbers" assert="(1 - {@counter} of {@counter})" />

	<!--Delete the record-->

	<script
		file="{@global.scriptsdir}/modules/leads/module_lib/Lead_Delete_search_data.xml" />
	<puts text="Test: Leads_1906.xml finished" />
