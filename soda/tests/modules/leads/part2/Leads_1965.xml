<soda>
	<!--
		In-Line Create Call_Verify that call can be in-line created from Activities
		sub-panel for a lead
	-->
	<puts text="Test: Leads_1965.xml starting." />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<!--go to the leads-->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--create a call-->
	<div id="list_subpanel_activities">
		<table class="list view">
			<button value="  Log Call  " />
		</table>
	</div>
	<csv file="{@global.scriptsdir}/csvs/leads/Leads_1965.csv" var="Leads_1965">
		<textfield id="name" set="{@Leads_1965.name}" />
		<textfield id="date_start_date" set="{@Leads_1965.date_start_date}" />
		<select id="date_start_hours" set="{@Leads_1965.date_start_hours}" />
		<select id="date_start_minutes" set="{@Leads_1965.date_start_minutes}" />

		<textfield name="duration_hours" set="{@Leads_1965.duration_hours}" />
		<select name="duration_minutes" set="{@Leads_1965.duration_minutes}" />

		<select id="direction" set="{@Leads_1965.direction}" />
		<select id="status" set="{@Leads_1965.status}" />

		<checkbox name="reminder_checked" set="{@Leads_1965.reminder_checked}" />
		<textfield id="description" set="{@Leads_1965.description}" />

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@Leads_1965.assigned_user_name}" />
		<button value="Search" />
		<link text="{@Leads_1965.assigned_user_name}" />

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Calls_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Leads_1965.team_name}" />
		<button value="Search" />
		<link text="{@Leads_1965.team_name}" />
		<button id="Calls_subpanel_save_button" />
	</csv>
	<wait timeout="10" />


	<!--verify the call-->
	<div id="list_subpanel_activities">
		<span class="pageNumbers" assert="(1 - 1 of 1)" />
		<table class="list view">
			<link text="{@Leads_1965.name}" />
		</table>
	</div>
	<browser assert="{@Leads_1965.name}" />
	<browser assert="{@Leads_1965.status}" />
	<browser assert="{@Leads_1965.description}" />

	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts test="Test: Leads_1965.xml finished." />
</soda>
