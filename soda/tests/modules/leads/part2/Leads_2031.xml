<soda>
	<!--
		Create Lead_Verify that lead is not created when entering invalid data in the
		email fields for creating a lead by using "New Lead" quick new item box
	-->
	<puts text="Test: Leads_2031.xml starting" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />
	<!--go to the leads-->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />
	<link text="Mr. {@pre_lead_first_name} {@pre_lead_last_name}" />
	<button id="edit_button" />
	<csv file="{@global.scriptsdir}/csvs/leads/Leads_2031.csv" var="Leads_2031">
		<textfield name="first_name" set="{@Leads_2031.first_name}" />
		<textfield id="last_name" set="{@Leads_2031.last_name}" />
		<button value="Save" />
	</csv>
	<!--verify-->
	<browser assert="{@Leads_2031.first_name}" />
	<browser assert="{@Leads_2031.last_name}" />
	<link id="moduleTab_Leads" alert="true" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Leads_2031.xml starting" />
</soda>
