<soda>
	<!--
		Edit Leads_Verify that the lead can be canceled editing by clicking the edit
		icon at the right edge of each lead record in list view after advanced search.
	-->
	<puts text="Test: Leads_1973.xml starting" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<link text="Advanced Search" />
	<wait timeout="3" />
	<button id="search_form_clear" />
	<button id="search_form_submit" />
	<wait timeout="3" />
	<!-- Edit the record via the "edit" button -->
	<table class="list view">
		<browser
			assert="{@Lead_New_Record.first_name} {@user.name} {@stamp} {@Lead_New_Record.last_name}" />
	</table>

	<span id="adspan_{@pre_lead_id}" jscriptevent="onmouseover" exists="true" />

	<wait timeout="3" />
	<div id="overDiv">
		<image index="1" click="true" />
	</div>
	<wait timeout="3" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
		<browser
			assert="{@Lead_New_Record.first_name} {@user.name} {@stamp} {@Lead_New_Record.last_name}" />
		<browser assert="Edit" />
	</div>
	<button value="Cancel" alert="true" />
	<wait timeout="3" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
		<browser
			assertnot="{@Lead_New_Record.first_name} {@user.name} {@stamp} {@Lead_New_Record.last_name}" />
		<browser assertnot="Edit" />
	</div>

	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<link text="Basic Search" required="false" />
	<button id="search_form_clear" />
	<button id="search_form_submit" />

	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Leads_1973.xml finished" />
</soda>
