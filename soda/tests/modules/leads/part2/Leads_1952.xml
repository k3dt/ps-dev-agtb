<soda>
	<!--
		Edit Note_Verify that the information of note related to a lead can be
		modified when using "Edit" function in "History" sub-panel
	-->
	<puts text="Test: Leads_1952.xml starting" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<!--go to the leads-->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--create a note-->
	<div id="list_subpanel_history">
		<table class="list view">
			<button value="  Create Note or Attachment  " />
		</table>
	</div>
	<button id="Notes_subpanel_full_form_button" />
	<csv file="{@global.scriptsdir}/csvs/leads/Leads_1952.csv" var="Leads_1952">
		<textfield id="name" set="{@Leads_1952.name}" />
		<textfield id="description" set="{@Leads_1952.description}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Leads_1952.team_name}" />
		<button value="Search" />
		<link text="{@Leads_1952.team_name}" />
		<button value="Save" />
	</csv>

	<div id="list_subpanel_history">
		<link class="listViewTdToolsS1" index="1" />
	</div>
	<textfield id="name" set="{@Leads_1952.new_name}" />
	<button value="Save" />
	<wait timeout="5" />

	<!--verify the note-->
	<div id="list_subpanel_history">
		<table class="list view">
			<link text="{@Leads_1952.new_name}" />
		</table>
	</div>
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Leads_1952.xml finished" />
</soda>
