<soda>

	<!--
		Convert Lead_Verify that lead can be converted with a newly scheduled meeting
	-->
	<puts text="Test: Leads_2007.xml starting" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib_FULL.xml" />
	<!--go to the leads-->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />
	<link text="Mr. {@pre_lead_first_name} {@pre_lead_last_name}" />
	<csv file="{@global.scriptsdir}/csvs/leads/Leads_2007.csv" var="Leads_2007">
		<!--Convert Lead-->
		<button value="Convert Lead" />
		<checkbox name="newMeetings" set="true" />
		<textfield name="Meetingsname" set="{@Leads_2007.Appointmentsname}" />
		<textfield name="Meetingsdescription" set="{@Leads_2007.Appointmentsdescription}" />
		<button value="Save" />
		<!--verify-->
		<wait timeout="5" />
		<link text="{@Leads_2007.Appointmentsname}" />
		<browser assert="{@Leads_2007.Appointmentsname}" />
		<browser assert="{@Leads_2007.Appointmentsdescription}" />

	</csv>
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Leads_2007.xml finished" />
</soda>
