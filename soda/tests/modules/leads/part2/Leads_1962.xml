<soda>
	<!-- In-Line Create Task_Verify that task can be canceled for in-line creating from 
		Activities sub-panel for a lead -->
	<puts text="Test: Leads_1962.xml starting" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<!--go to the leads -->
	<link id="moduleTab_Leads" />
	<browser assert="Leads" />
	<button id="search_form_clear" />
	<textfield id="search_name_basic" set="{@pre_lead_first_name}" />
	<button id="search_form_submit" />
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />

	<!--create a task -->
	<div id="list_subpanel_activities">
		<table class="list view">
			<button value="  Create Task  " />
		</table>
	</div>
	<wait timeout="5" />
	<csv file="{@global.scriptsdir}/csvs/leads/Leads_1962.csv" var="Leads_1962">
		<textfield id="name" set="{@Leads_1962.name}" />
		<select id="priority" set="{@Leads_1962.priority}" />
		<select id="status" set="{@Leads_1962.status}" />
		<textfield id="description" set="{@Leads_1962.description}" />

		<!--Due Date -->
		<textfield id="date_due_date" set="{@Leads_1962.date_due_date}" />
		<select id="date_due_hours" set="{@Leads_1962.date_due_hours}" />
		<select id="date_due_minutes" set="{@Leads_1962.date_due_minutes}" />
		<checkbox id="date_due_flag" set="{@Leads_1962.date_due_flag}" />

		<!--Start Date -->
		<textfield id="date_start_date" set="{@Leads_1962.date_start_date}" />
		<select id="date_start_hours" set="{@Leads_1962.date_start_hours}" />
		<select id="date_start_minutes" set="{@Leads_1962.date_start_minutes}" />
		<checkbox id="date_start_flag" set="{@Leads_1962.date_start_flag}" />

		<!--user select -->
		<button id="btn_assigned_user_name" />
		<wait timeout="8" />
		<browser assert="User Search" />
		<textfield id="last_name_advanced" set="{@Leads_1962.assigned_user_name}" />
		<button value="Search" />
		<link text="{@Leads_1962.assigned_user_name}" />

		<!--teams select -->
		<table id="form_SubpanelQuickCreate_Tasks_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Leads_1962.team_name}" />
		<button value="Search" />
		<link text="{@Leads_1962.team_name}" />

		<button id="Tasks_subpanel_cancel_button" alert="true" />
	</csv>
	<wait timeout="5" />


	<!--verify the task -->
	<div id="list_subpanel_activities">
		<span class="pageNumbers" assert="(0 - 0 of 0)" />
	</div>

	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts test="Test: Leads_1962.xml finished" />
</soda>
