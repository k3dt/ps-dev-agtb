<soda>
	<!--
		Edit Leads_Verify that the lead can be edited by clicking the edit icon at the
		right edge of each lead record in list view.
	-->
	<puts text="Test: Leads_1972.xml starting" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Leads" />
	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<button id="search_form_submit" />

	<!-- Edit the record via the "edit" button -->

	<table class="list view">
		<row class="oddListRowS1">
			<cell index="3">
				<link index="1" />
			</cell>
		</row>
	</table>
	
	<wait timeout="3" />

	<div class="moduleTitle">
		<link href="index.php?module=Leads&amp;action=index" click="false" />
		<wait timeout="3" />
		<browser
			assert="{@Lead_New_Record.first_name} {@user.name} {@stamp} {@Lead_New_Record.last_name}" />
	</div>

	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Leads_1972.xml finished" />
</soda>
