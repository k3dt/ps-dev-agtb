<soda>
	<puts text="Test: Activities_0282.xml started." />

	<!--
		Account Detail - Activities sub-panel - Remove Relationship - Call_Verify that
		deleting a call record is canceled.
	-->


	<!--create call record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />


	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>

	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<wait timeout="5" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>
	<wait timeout="15" />

	<!--Create one schedule call-->
	<div id="list_subpanel_activities">
		<button value="  Log Call  " />
	</div>
	<wait timeout="3" />
	<div id="subpanel_activities_newDiv">
		<textfield id="name" set="schedule_call_0281" />
		<button id="Calls_subpanel_save_button" />
	</div>
	<wait timeout="10" />

	<!--Delete the "scheduled call" and then cancel the action-->
	<browser assert="{@pre_account_name}" />
	<div id="list_subpanel_activities">
		<link text="schedule_call_0281" click="false" />
		<link class="listViewTdToolsS1" index="2" alert="false" />
	</div>


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />

	<puts text="Test: Activities_0282.xml finished." />
</soda>