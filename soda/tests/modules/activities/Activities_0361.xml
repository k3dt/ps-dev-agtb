<soda>
	<!--
		Account Detail - Activities sub-panel - Create Task_Verify that creating a
		task in in-line form
	-->
	<puts text="Test: Activites_0361.xml starting" />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<browser assert="Accounts" />
	<button id="search_form_clear" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create Activities Subpanel-->
	<button name="Activities_createtask_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0032.csv" var="activity_record_0361">
		<div id="form_SubpanelQuickCreate_Tasks_tabs">
			<textfield id="name" set="{@activity_record_0361.name} {@user.name} {@stamp}" />
			<select id="priority" set="{@activity_record_0361.priority}" />
			<select id="status" set="{@activity_record_0361.status}" />
			<textfield id="description" set="{@activity_record_0361.description}" />

			<!--Due Date-->
			<textfield id="date_due_date" set="{@activity_record_0361.date_due_date}" />
			<select id="date_due_hours" set="{@activity_record_0361.date_due_hours}" />
			<select id="date_due_minutes" set="{@activity_record_0361.date_due_minutes}" />
			<checkbox id="date_due_flag" set="{@activity_record_0361.date_due_flag}" />

			<!--Start Date-->
			<textfield id="date_start_date" set="{@activity_record_0361.date_start_date}" />
			<select id="date_start_hours" set="{@activity_record_0361.date_start_hours}" />
			<select id="date_start_minutes" set="{@activity_record_0361.date_start_minutes}" />
			<checkbox id="date_start_flag" set="{@activity_record_0361.date_start_flag}" />
		</div>

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@activity_record_0361.assigned_user_name}" />
		<button value="Search" />
		<link text="{@activity_record_0361.assigned_user_name}" />

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Tasks_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@activity_record_0361.team_name}" />
		<button value="Search" />
		<link text="{@activity_record_0361.team_name}" />

		<button id="Tasks_subpanel_cancel_button" alert="true" />
		<wait timeout="5" />

		<!--Verify the task record created in subpanel-->
		<div id="list_subpanel_activities">
			<span class="pageNumbers" assert="(0 - 0 of 0)" />
		</div>
	</csv>

	<!--delete a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Activites_0361.xml finished" />
</soda>