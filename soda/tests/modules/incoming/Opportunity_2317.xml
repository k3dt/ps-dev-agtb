<soda>
	<puts text="Test: Opportunity_2317 starting." />

	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2317.csv" var="Opportunity_2317">

		<!-- Creates, edits and cancels editing of an Opportunity record. -->
		<script file="{@global.scriptsdir}/modules/lib/ContractType_Create_Lib.xml" />
		<script file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml" />
		<link id="moduleTab_Opportunities" />


		<link text="Basic Search" required="false" />

		<button id="search_form_clear" />


		<textfield id="name_basic" set="{@Opportunity_2317.name} {@user.name} {@stamp}" />

		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@Opportunity_2317.name} {@user.name} {@stamp}" />
			<link text="{@Opportunity_2317.name} {@user.name} {@stamp}" click="true" />
		</table>
		<browser assert="{@Opportunity_2317.name} {@user.name} {@stamp}" />

		<div id="list_subpanel_contracts">
			<table class="list view">
				<button name="contracts_opportunities_create_button" />
			</table>
		</div>

		<button id="Contracts_subpanel_full_form_button" />

		<form id="EditView">
			<!--Teams select -->
			<table id="EditView_team_name_table">
				<button value="Select" />
			</table>
		</form>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Opportunity_2317.team_name}" />
		<button value="Search" />
		<link text="{@Opportunity_2317.team_name}" />

		<!--Opportunity select -->
		<button id="btn_opportunity_name" />
		<browser assert="Opportunity Search" />
		<textfield name="name_advanced" set="{@pre_opp_name}" />
		<button value="Search" />
		<table class="list view">
			<link text="{@pre_opp_name}" />
		</table>

		<!--Account select -->
		<button id="btn_account_name" />
		<browser assert="Account Search" />
		<textfield name="name_advanced" set="{@pre_account_name}" />
		<button value="Search" />
		<table class="list view">
			<link text="{@pre_account_name}" />
		</table>

		<form id="EditView">
			<textfield name="name"
				set="{@Opportunity_2317.contract_name} {@user.name} {@stamp}" />
			<textfield id="reference_code" set="{@Opportunity_2317.contract_reference_code}" />
			<textfield id="expiration_notice_date" set="{@Opportunity_2317.contract_expiration_notice_date}" />
			<select id="expiration_notice_hours" set="{@Opportunity_2317.contract_expiration_notice_hours}" />
			<select id="expiration_notice_minutes" set="{@Opportunity_2317.contract_expiration_notice_minutes}" />
			<!--select id="expiration_notice_meridiem" set="{@Opportunity_2317.expiration_notice_meridiem}"/ -->
			<select name="type" set="{@ContractType_Create_Lib}" />
			<textfield id="description" set="{@Opportunity_2317.contract_description}" />
			<select id="status" set="{@Opportunity_2317.contract_status}" />
			<textfield id="start_date" set="{@Opportunity_2317.contract_start_date}" />
			<textfield id="end_date" set="{@Opportunity_2317.contract_end_date}" />
			<select name="currency_id" set="{@Opportunity_2317.contract_currency_id}" />
			<textfield id="total_contract_value" set="{@Opportunity_2317.contract_total_contract_value}" />
			<textfield name="customer_signed_date" set="{@Opportunity_2317.contract_customer_signed_date}" />
			<textfield name="company_signed_date" set="{@Opportunity_2317.contract_company_signed_date}" />
			<button value="Save" />
		</form>
		<div id="list_subpanel_contracts">
			<table class="list view">
				<browser assert="{@Opportunity_2317.contract_name} {@user.name} {@stamp}" />
				<link text="{@Opportunity_2317.contract_name} {@user.name} {@stamp}"
					click="false" />
				<link class="listViewTdToolsS1" index="1" />
			</table>
		</div>
		<form id="EditView">
			<textfield name="name"
				set="{@Opportunity_2317.contract_name_edit} {@user.name} {@stamp}" />
			<textfield id="reference_code" set="{@Opportunity_2317.contract_reference_code_edit}" />
			<textfield id="expiration_notice_date"
				set="{@Opportunity_2317.contract_expiration_notice_date_edit}" />
			<select id="expiration_notice_hours" set="{@Opportunity_2317.contract_expiration_notice_hours_edit}" />
			<select id="expiration_notice_minutes"
				set="{@Opportunity_2317.contract_expiration_notice_minutes_edit}" />
			<!--select id="expiration_notice_meridiem" set="{@Opportunity_2317.expiration_notice_meridiem}"/ -->
			<select name="type" set="{@ContractType_Create_Lib}" />
			<textfield id="description" set="{@Opportunity_2317.contract_description_edit}" />
			<select id="status" set="{@Opportunity_2317.contract_status_edit}" />
			<textfield id="start_date" set="{@Opportunity_2317.contract_start_date_edit}" />
			<textfield id="end_date" set="{@Opportunity_2317.contract_end_date_edit}" />
			<select name="currency_id" set="{@Opportunity_2317.contract_currency_id_edit}" />
			<textfield id="total_contract_value"
				set="{@Opportunity_2317.contract_total_contract_value_edit}" />
			<textfield name="customer_signed_date"
				set="{@Opportunity_2317.contract_customer_signed_date_edit}" />
			<textfield name="company_signed_date"
				set="{@Opportunity_2317.contract_company_signed_date_edit}" />
			<button value="Cancel" alert="true" />
		</form>
		<div id="list_subpanel_contracts">
			<table class="list view">
				<browser assert="{@Opportunity_2317.contract_name} {@user.name} {@stamp}" />
			</table>
		</div>
		<hidden name="record" var="pre_opp_id" />

		<var var="pre_opp_name" set="{@Opportunity_2317.name} {@user.name} {@stamp}" />

	</csv>
	<!--Run Delete XML -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/ContractType_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contract_Delete_Lib.xml" />
	<!--script file="scripts/sugarcrm/modules/lib/Team_Delete_Lib.xml"/ -->
	<puts text="Test: Opportunity_2317.xml finished." />
</soda>
