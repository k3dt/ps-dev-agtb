<soda>
	<!--
		Action:
			1. Login to system as a valid user.
			2. Click "Calendar" navigation tab.
			3. Click "Schedule Meeting" link on Navigation shortcuts.
			4. Enter all the Mandatory fields, like "Subject",
				"Start date & time", "Team", "Status" and "Duration".
			5. Search for users with "first name or last name or with 
				email" search condition in "Add Invitees" sub-panel.
			6. Click on "Send Invites" button.7. Logout current user. 
				Then login to system with the invited user mention above.
		Expectation:
			7. Meeting is displayed in "My Meetings" dashlet
				of the invited users Home page.
	-->
	<puts text="Test: Calendar_0716.xml starting." />
	
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.xml" />
	
	<button id="edit_button" />

    <textfield name="search_email" set="sugarqa3@gmail.com" />
	
	<button value="Search" />
	
	<wait timeout="3" />
	
	<javascript loadUtils="true">
		SugarWidgetSchedulerAttendees.form_add_attendee(0);
    </javascript>

	<wait timeout="5" />
	
	<button value="Save" />
	
	<script file="{@global.scriptsdir}/modules/lib/logout.xml" />
	
	<browser url="{@global.url}" />

	<link text="Log Out" required="false" timeout="2" />
	<browser assert="Please enter your user name and password" />

	<textfield id="user_name" set="qauser" />
	<textfield id="user_password" set="QAuser1" />
	<button id="login_button" />

   <!-- Match a new user login or an existing user login, but not a failed login. -->
	<browser assert="/Welcome(, | to Sugar!)/" />

	<ul id="col_0_0">
		<browser assert="{@pre_meeting_name}" />
	</ul>
	
	<script file="{@global.scriptsdir}/modules/lib/login.xml" />
	
	
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	
	<puts text="Test: Calendar_0716.xml finished." />
</soda>