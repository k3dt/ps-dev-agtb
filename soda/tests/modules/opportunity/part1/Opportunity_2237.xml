<soda>
    <puts text="----Opportunity_2237.xml----Edit Opportunity: Verify that opportunity is modified successfully by using Edit   function.----Start!"/>
    <csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2237.csv" var="Opportunity_2237">
        <link id="moduleTab_Opportunities"/>
        <browser assert="Opportunities"/>
        <button id="search_form_clear"/>
        <form id="search_form">
            <textfield id="name_basic" set="{@pre_opp_name}"/>
        </form>
        <button id="search_form_submit"/>

        <table class="list view">
          <wait timeout="3" /> 
          <browser assert="{@pre_opp_name}"/>
          <link text="{@pre_opp_name}" click="true"/>
          <link text="{@pre_opp_name}" required="false" timeout="3" />
        </table>
        <browser assert="Opportunities"/>
        <browser assert="{@pre_opp_name}"/>

        <form id="form">
            <button id="edit_button"/>
        </form>

         <form id="EditView">
            <textfield id="amount" set="{@Opportunity_2237.amount_edit}"/> 
            <textfield id="probability" set="{@Opportunity_2237.probability_edit}"/> 
            <textfield id="date_closed" set="{@Opportunity_2237.date_closed_edit}"/> 
            <textfield id="next_step" set="{@Opportunity_2237.next_step_edit}"/>
            <textfield id="description" set="{@Opportunity_2237.description_edit}"/>
            <select id="opportunity_type" set="{@Opportunity_2237.opportunity_type_edit}"/>
            <select id="lead_source" set="{@Opportunity_2237.lead_source_edit}"/>
            <select name="currency_id" set="{@Opportunity_2237.currency_id_edit}"/>
            <select id="sales_stage" set="{@Opportunity_2237.sales_stage_edit}"/>
            <button value="Save"/>
        </form>
        <div id="Opportunities_detailview_tabs">
          <browser assert="{@Opportunity_2237.amount_edit}"/>
          <browser assert="{@Opportunity_2237.probability_edit}"/>
          <browser assert="{@Opportunity_2237.date_closed_edit}"/>
          <browser assert="{@Opportunity_2237.next_step_edit}"/>
          <browser assert="{@Opportunity_2237.description_edit}"/>
          <browser assert="{@Opportunity_2237.opportunity_type_edit}"/>
          <browser assert="{@Opportunity_2237.lead_source_edit}"/>
          <browser assert="{@Opportunity_2237.sales_stage_edit}"/>
        </div>
        
    </csv>

    <!--Run Delete XML-->
    
    <puts text="---Opportunity_2237.xml---Finished!"/>
</soda>
