<soda>
	<!--
		Account DetailView from Opportunity: Verify that account detail view can be
		displayed by clicking the "Account Name" field in opportunity list view.
	-->
	<puts text="Test: Opportunity_2242.xml starting" />

	<link id="moduleTab_Accounts" />
	<browser assert="Accounts" />
	<button id="search_form_clear" />

	<link id="moduleTab_Opportunities" />
	<browser assert="Opportunities" />

	<button id="search_form_clear" />
	<form id="search_form">
		<textfield id="name_basic" set="{@pre_opp_name}" />
	</form>
	<button id="search_form_submit" />

	<table class="list view">
		<browser assert="{@pre_opp_name}" />
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>
	<browser assert="Accounts" />
	<browser assert="{@pre_account_name}" />

	<!--Run Delete XML-->
	<puts text="Test: Opportunity_2242.xml finished" />
</soda>
