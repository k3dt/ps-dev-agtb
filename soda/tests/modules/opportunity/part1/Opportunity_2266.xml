<soda>
	<!--
		Full Form Create Contact: Verify that contact related to an opportunity can be
		created in full form mode using Create function in Contacts sub-panel
	-->
	<puts text="Test: Opportunity_2266.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2266.csv" var="Opportunity_2266">
		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />
		<link text="Basic Search" required="false" />

		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_opp_name}" />
		</form>
		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@pre_opp_name}" />
			<link text="{@pre_opp_name}" />
		</table>

		<table id="detailpanel_1">
			<browser assert="{@pre_opp_name}" />
		</table>

		<div id="list_subpanel_contacts">
			<table class="list view">
				<button id="opportunities_contacts_create_button" />
			</table>
		</div>

		<timestamp />
		<form id="form_SubpanelQuickCreate_Contacts">
			<button id="Contacts_subpanel_full_form_button" />
		</form>
		<browser assert="Contacts" />
		<browser assert="Create" />

		<!--Contact Create-->
		<textfield name="first_name" set="{@Opportunity_2266.contact_first_name}" />
		<textfield id="last_name" set="{@stamp} {@Opportunity_2266.contact_last_name}" />
		<textfield id="title" set="{@Opportunity_2266.contact_title}" />
		<textfield id="phone_mobile" set="{@Opportunity_2266.contact_phone_mobile}" />
		<textfield id="phone_fax" set="{@Opportunity_2266.contact_phone_fax}" />
		<textfield id="Contacts0emailAddress0" set="{@Opportunity_2266.contact_emailAddress0}" />
		<select id="lead_source" set="{@Opportunity_2266.contact_lead_source}" />
		<checkbox id="do_not_call" set="{@Opportunity_2266.contact_do_not_call}" />
		<checkbox id="sync_contact" set="{@Opportunity_2266.contact_sync_contact}" />
		<textfield id="alt_address_street" set="{@Opportunity_2266.contact_alt_address_street}" />
		<textfield id="alt_address_city" set="{@Opportunity_2266.contact_alt_address_city}" />
		<textfield id="alt_address_state" set="{@Opportunity_2266.contact_alt_address_state}" />
		<textfield id="alt_address_postalcode" set="{@Opportunity_2266.contact_alt_address_postalcode}" />
		<textfield id="alt_address_country" set="{@Opportunity_2266.contact_alt_address_country}" />

		<!--Account Select-->
		<button id="btn_account_name" />
		<browser assert="Account Search" />
		<textfield id="name_advanced" set="{@pre_account_name}" />
		<button value="Search" />
		<link text="{@pre_account_name}" />


		<button value="Save" />

		<div id="list_subpanel_contacts">
			<table class="list view">
				<browser
					assert="{@Opportunity_2266.contact_first_name} {@stamp} {@Opportunity_2266.contact_last_name}" />
			</table>
		</div>
	</csv>

	<!--Run Delete XML-->
	<link id="moduleTab_Contacts" />
	<link text="Basic Search" required="false" />
	<button id="search_form_clear" />
	<form id="search_form">
		<textfield id="search_name_basic"
			set="{@Opportunity_2266.contact_first_name} {@stamp} {@Opportunity_2266.contact_last_name}" />
	</form>
	<button id="search_form_submit" />

	<checkbox name="massall" click="true" />
	<link id="actions_link" />
	<link text="Delete" alert="true" />

	<puts text="Test: Opportunity_2266.xml finished" />
</soda>
