<soda>
	<!--
		Create Opportunity: Verify that opportunity can be duplicated when using
		Duplicate function in Opportunity detail view.
	-->
	<puts text="Test: Opportunity_2234.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2234.csv" var="Opportunity_2234">
		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />

		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_opp_name}" />
		</form>
		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@pre_opp_name}" />
			<link text="{@pre_opp_name}" />
		</table>
		<browser assert="{@pre_opp_name}" />

		<form id="form">
			<button id="duplicate_button" />
		</form>

		<form id="EditView">
			<textfield id="name"
				set="{@Opportunity_2234.name_duplicate} {@user.name} {@stamp}" />
			<button value="Save" />
		</form>

		<!--Save key info-->
		<browser assert="{@Opportunity_2234.name_duplicate} {@user.name} {@stamp}" />
		<form name="DetailView">
			<hidden name="record" var="pre_opp_id" />
		</form>
	</csv>

	<!--Run Delete XML-->
	<link id="moduleTab_Opportunities" />
	<browser assert="Opportunities" />

	<button id="search_form_clear" />
	<form id="search_form">
		<textfield id="name_basic"
			set="{@Opportunity_2234.name_duplicate} {@user.name} {@stamp}" />
	</form>
	<button id="search_form_submit" />
	<checkbox name="massall" click="true" />
	<link id="actions_link" />
	<link text="Delete" alert="true" />
	<span class="pageNumbers" assert="(0 - 0 of 0)" />

	<puts text="Test: Opportunity_2234.xml finished" />
</soda>
