<soda>
	<!--
		Create Opportunity: Verify that opportunity is not duplicated when using
		cancel function.
	-->
	<puts text="Test: Opportunity_2235.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2235.csv" var="Opportunity_2235">
		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />

		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_opp_name}" />
		</form>
		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@pre_opp_name}" />
			<link text="{@pre_opp_name}" />
		</table>
		<browser assert="Opportunities" />
		<browser assert="{@pre_opp_name}" />

		<form id="form">
			<button id="duplicate_button" />
		</form>

		<form id="EditView">
			<textfield id="name"
				set="{@Opportunity_2235.name_duplicate} {@user.name} {@stamp}" />
			<button value="Cancel" alert="true" />
		</form>
	</csv>

	<link id="moduleTab_Opportunities" />
	<button id="search_form_clear" />
	<form id="search_form">
		<textfield id="name_basic"
			set="{@Opportunity_2235.name_duplicate} {@user.name} {@stamp}" />
	</form>
	<button id="search_form_submit" />
	<table class="list view">
		<browser assert="{@Opportunity_2235.name_duplicate} {@user.name} {@stamp}"
			exist="false" />
	</table>
	<!--Run Delete XML-->
	<puts text="Test: Opportunity_2235.xml finished" />
</soda>
