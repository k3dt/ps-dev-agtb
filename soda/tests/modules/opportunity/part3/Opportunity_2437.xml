<soda>
	<puts text="Test: Opportunity_2437.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2437.csv" var="Opportunity_2437">
		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />
		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_opp_name}" />
		</form>
		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@pre_opp_name}" />
			<link text="{@pre_opp_name}" />
		</table>

		<table id="detailpanel_1">
			<browser assert="{@pre_opp_name}" />
		</table>

		<form id="formformNotes">
			<button name="History_createnoteorattachment_button" />
		</form>
		<button id="Notes_subpanel_full_form_button" />
		<timestamp />
		<form id="EditView">
			<textfield id="name" set="{@Opportunity_2437.note_name} {@user.name} {@stamp}" />
			<textarea id="description" set="{@Opportunity_2437.note_description}" />
			<!--teams select-->
			<table id="EditView_team_name_table">
				<button value="Select" />
			</table>
		</form>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Opportunity_2437.team_name}" />
		<button value="Search" />
		<link text="{@Opportunity_2437.team_name}" />

		<form id="EditView">
			<button value="Save" />
		</form>
	</csv>
	<!--Run Delete XML-->
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<puts text="Test: Opportunity_2437.xml finished" />
</soda>
