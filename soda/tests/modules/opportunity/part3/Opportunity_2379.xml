<soda>
	<puts text="Test: Opportunity_2379.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2379.csv" var="Opportunity_2379">
		<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />
		<timestamp />
		<link id="moduleTab_Opportunities" />
		<link text="Create Opportunity" />

		<textfield id="name" set="{@Opportunity_2379.name} {@user.name} {@stamp}" />
		<textfield id="amount" set="{@Opportunity_2379.amount}" />
		<textfield id="probability" set="{@Opportunity_2379.probability}" />
		<textfield id="date_closed" set="{@Opportunity_2379.date_closed}" />
		<textfield id="next_step" set="{@Opportunity_2379.next_step}" />
		<textfield id="description" set="{@Opportunity_2379.description}" />
		<select id="opportunity_type" set="{@Opportunity_2379.opportunity_type}" />
		<select id="lead_source" set="{@Opportunity_2379.lead_source}" />
		<select name="currency_id" set="{@Opportunity_2379.currency_id}" />
		<select id="sales_stage" set="{@Opportunity_2379.sales_stage}" />

		<!--Account Select-->
		<button id="btn_account_name" />
		<browser assert="Account Search" />
		<textfield id="name_advanced" set="{@pre_account_name}" />
		<button value="Search" />
		<link text="{@pre_account_name}" />

		<!--Select Campaign record-->
		<button id="btn_campaign_name" />
		<browser assert="Campaign Search" />
		<textfield id="name_advanced" set="{@Campaign_Name}" />
		<button value="Search" />
		<link text="{@Campaign_Name}" />

		<button value="Save" />

		<browser assert="{@Opportunity_2379.name} {@user.name} {@stamp}" />
		<link text="{@pre_account_name}" click="true" />
		<browser assert="{@pre_account_name}" />

		<div id="list_subpanel_opportunities">
			<table class="list view">
				<browser assert="{@Opportunity_2379.name} {@user.name} {@stamp}" />
			</table>
		</div>

		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />
		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@Opportunity_2379.name} {@user.name} {@stamp}" />
		</form>
		<button id="search_form_submit" />
		<table class="list view">
			<browser assert="{@Opportunity_2379.name} {@user.name} {@stamp}" />
			<link text="{@Opportunity_2379.name} {@user.name} {@stamp}" />
		</table>
		<link text="{@Campaign_Name}" click="true" />
		<div id="Campaigns_detailview_tabs">
			<browser assert="{@Campaign_Name}" />
		</div>
		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />
		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@Opportunity_2379.name} {@user.name} {@stamp}" />
		</form>
		<button id="search_form_submit" />
		<table class="list view">
			<browser assert="{@Opportunity_2379.name} {@user.name} {@stamp}" />
		</table>
		<checkbox name="massall" click="true" />
		<link id="actions_link" />
		<link text="Delete" alert="true" />
	</csv>
	<!--Run Delete XML-->

	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<puts text="Test: Opportunity_2379.xml finished" />
</soda>
