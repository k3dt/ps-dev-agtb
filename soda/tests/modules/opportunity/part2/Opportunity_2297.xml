<soda>
	<puts text="Test: Opportunity_2297.xml starting" />
	<csv file="{@global.scriptsdir}/csvs/opportunity/Opportunity_2297.csv" var="Opportunity_2297">
		<link id="moduleTab_Opportunities" />
		<browser assert="Opportunities" />
		<link text="Basic Search" required="false" />

		<button id="search_form_clear" />
		<form id="search_form">
			<textfield id="name_basic" set="{@pre_opp_name}" />
		</form>
		<button id="search_form_submit" />

		<table class="list view">
			<browser assert="{@pre_opp_name}" />
			<link text="{@pre_opp_name}" />
		</table>

		<table id="detailpanel_1">
			<browser assert="{@pre_opp_name}" />
		</table>

		<form id="formformNotes">
			<button value="  Create Note or Attachment  " />
		</form>
		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Notes_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Opportunity_2297.team_name}" />
		<button value="Search" />
		<link text="{@Opportunity_2297.team_name}" />

		<form id="form_SubpanelQuickCreate_Notes">
			<textfield id="name" set="{@Opportunity_2297.note_name} {@user.name} {@stamp}" />
			<textarea id="description" set="{@Opportunity_2297.note_description}" />
			<button id="Notes_subpanel_save_button" />
		</form>
		<wait />
		<div id="list_subpanel_history">
			<table class="list view">
				<browser assert="{@Opportunity_2297.note_name} {@user.name} {@stamp}" />
				<link class="listViewTdToolsS1" index="1" />
			</table>
		</div>
		<wait />
		<form id="EditView">
			<textfield id="name"
				set="{@Opportunity_2297.note_name_edit} {@user.name} {@stamp}" />
			<textarea id="description" set="{@Opportunity_2297.note_description_edit}" />
			<button value="Cancel" alert="true" />
		</form>
		<wait />
		<div id="list_subpanel_history">
			<table class="list view">
				<browser assert="{@Opportunity_2297.note_name} {@user.name} {@stamp}"
					click="false" />
			</table>
		</div>

	</csv>
	<!--Run Delete XML-->
	<script file="{@global.scriptsdir}/modules/lib/Note_Delete_Lib.xml" />
	<puts text="Test: Opportunity_2297.xml finished" />
</soda>
