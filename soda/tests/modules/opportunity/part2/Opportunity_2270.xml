<soda>
        <csv file='{@global.scriptsdir}/csvs/opportunity/Opportunity_2270.csv' var='Opportunity_2270'>
        <puts text='----Opportunity_2270.xml----Select Contact_Verify that an existing contacts can be selected for the opportunity by clicking "Contact Name".----Start!'/>

        <link id='moduleTab_Opportunities'/>
        <browser assert='Opportunities'/>
        <link text='Basic Search' required='false'/>

        <button id='search_form_clear'/>
        <form id='search_form'>
            <textfield id='name_basic' set='{@pre_opp_name}'/>
        </form>
        <button id='search_form_submit'/>
        
        <table class='list view'>
            <browser assert='{@pre_opp_name}'/>
            <link text='{@pre_opp_name}'/>
        </table>
        
        <table id='detailpanel_1'>
            <browser assert='{@pre_opp_name}'/>
        </table>

        <div id='list_subpanel_contacts'>
            <table class='list view'>
                <button id='opportunities_contacts_select_button'/>
            </table>
        </div>

        <!--Contact select-->
        <browser assert='Contact Search'/>
        <textfield id='first_name_advanced' set='{@pre_contact_first_name}'/> 
        <textfield id='account_name_advanced' set=''/>
        <button value='Search'/>
        <table class='list view'>
        <link text='{@pre_contact_first_name} {@pre_contact_last_name}'/>
        </table>
       
         <div id='list_subpanel_contacts'>
           <table class='list view'>               
             <browser assert='{@pre_contact_first_name} {@pre_contact_last_name}'/>
           </table>
         </div>
                
    </csv>
    <!--Run Delete XML-->
    <div id='list_subpanel_contacts'>
        <table class='list view'>
            <link class='listViewTdToolsS1' index='2' alert='true' />
            <wait timeout='2'/>
            <link text='{@pre_contact_first_name} {@pre_contact_last_name}' click='false' exist='false'/>
       </table>
    </div>
    <puts text='---Opportunity_2270.xml---Finished!'/>
</soda>
