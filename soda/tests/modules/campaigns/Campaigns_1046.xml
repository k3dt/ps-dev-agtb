<soda>
	<!-- the "Edit" function in "Leads" sub-panel -->
	<puts text="Test: Campaigns_1046.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaigns" />

	<!-- Create a lead and a targetlist. -->
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Create_Lib.xml" />

	<div id="list_subpanel_leads">
		<button id="prospect_list_leads_select_button" />
	</div>

	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" />
	<div class="moduleTitle">
		<link href="index.php?module=ProspectLists&amp;action=index" click="false" />
	</div>
	<link text="{@pre_lead_salutation} {@pre_lead_first_name} {@pre_lead_last_name}" click="false" />

	<div id="list_subpanel_leads">
		<link class="listViewTdToolsS1" index="1" />
	</div>
	<div id="LBL_CONTACT_INFORMATION">
		<timestamp />
		<textfield name="first_name" set="{@Lead_New_Record.first_name} {@stamp}" /> 
	</div>
	<button value="Save" />
	<link text="{@pre_lead_salutation} {@Lead_New_Record.first_name} {@stamp} {@pre_lead_last_name}" click="false" />

	<!--delete the test data-->
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />

	<puts text="Test: Campaigns_1046.xml finished." />
</soda>