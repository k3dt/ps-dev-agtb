<soda>
	<!-- Create Campaign (Classic) -->
	<puts text="Test: Campaigns_0838.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaign" />

	<link id="moduleTab_Campaigns" />
	<div class="moduleTitle">
		<link href="index.php?module=Campaigns&amp;action=index" click="false" />
	</div>
	
	<link text="Create Campaign (Classic)" />
	
	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_0838.csv" var="Campaign0838">
		<form id="EditView">
			<timestamp />

			<textfield name="name" set="{@Campaign0838.name} {@user.name} {@stamp}" /> 
			<select id="status" set="{@Campaign0838.status}" />
			<select id="campaign_type" set="{@Campaign0838.type}" />
			<textfield id="content" set="{@Campaign0838.description}" />    
			<textfield id="end_date" set="{@Campaign0838.enddate}" />              
			<button value="Save" />
		</form>
		<browser assert="{@Campaign0838.name} {@user.name} {@stamp}" />
    </csv>

	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_0838.xml finished." />
</soda>