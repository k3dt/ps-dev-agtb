<soda>
	<!-- Mass Update_Verify that frequency of campaign -->
	<puts text="Test: Campaigns_1096.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaigns" />

	<!-- Create a campaign. -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />

	<!--Go to campaign list view-->
	<link text="Campaigns" />
	<div class="moduleTitle">
		<link href="index.php?module=Campaigns&amp;action=index" click="false" />
	</div>

	<!--Clear the search condition-->
	<button name="clear" />
	<form id="search_form">
		<checkbox id="current_user_only_basic" set="false" />
		<textfield id="name_basic" set="{@Campaign_Name}" />
		<button id="search_form_submit" />
	</form>

	<!--Select all record in list-->
	<checkbox name="massall" set="true" />

	<!--Set a frequency-->
	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_1096.csv" var="Campaign_1096">
		<select id="mass_frequency" set="{@Campaign_1096.frequency}" />
		<button id="update_button" alert="true" />
	</csv>

	<!--Go to the campaign detail view-->
	<link text="{@Campaign_Name}" />
	<browser assert="{@Campaign_1096.frequency}" />

	<!--delete the test data-->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_1096.xml finished." />
</soda>