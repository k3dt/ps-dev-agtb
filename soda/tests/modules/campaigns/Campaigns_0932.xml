<soda>
	<!-- pagination in the "Target List" sub-panel -->
	<puts text="Test: Campaigns_0932.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaign" />

	<!--change the item number of subpanel-->
	<link text="Admin" />
	<link text="System Settings" />
	<browser assert="System Settings" />
	<textfield name="list_max_entries_per_subpanel" set="1" />
	<button name="save" />

	<link id="moduleTab_Campaigns" />
	<div class="moduleTitle">
		<link href="index.php?module=Campaigns&amp;action=index" click="false" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_0898.csv" var="Campaign0932">
		<!--Create a campaign record -->
		<link id="moduleTab_Campaigns" />
		<link text="Create Campaign (Classic)" />

      <form id="EditView">
			<timestamp />

			<textfield id="name" set="{@Campaign0932.name} {@user.name} {@stamp}" />
			<select id="status" set="{@Campaign0932.status}" />
			<textfield id="end_date" set="{@Campaign0932.end_date}" />
			<select id="campaign_type" set="{@Campaign0932.type}" />

			<button value="Save" />
		</form>
		<browser assert="{@Campaign0932.name} {@user.name} {@stamp}" />
	</csv>

	<!--Verify the start pagination button-->
	<div id="list_subpanel_prospectlists">
		<button name="listViewNextButton" />
		<span class="pageNumbers" assert="(2 - 2 of 3)" />

		<button name="listViewNextButton" />
		<span class="pageNumbers" assert="(3 - 3 of 3)" />

		<button name="listViewPrevButton" />
		<span class="pageNumbers" assert="(2 - 2 of 3)" />

		<button name="listViewPrevButton" />
		<span class="pageNumbers" assert="(1 - 1 of 3)" />

		<button name="listViewEndButton" />
		<span class="pageNumbers" assert="(3 - 3 of 3)" />

		<button name="listViewStartButton" />
		<span class="pageNumbers" assert="(1 - 1 of 3)" />
	</div>

	<!--change the item number of subpanel-->
	<link text="Admin" />
	<link text="System Settings" />
	<browser assert="System Settings" />
	<textfield name="list_max_entries_per_subpanel" set="10" />
	<button name="save" />

	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_0932.xml finished." />
</soda>