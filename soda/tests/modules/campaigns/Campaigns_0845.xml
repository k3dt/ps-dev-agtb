<soda>
	<!-- Create a target record -->
	<puts text="Test: Campaigns_0845.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaign" />

	<link id="moduleTab_Campaigns" />
	<div class="moduleTitle">
		<link href="index.php?module=Campaigns&amp;action=index" click="false" />
	</div>

	<link text="Create Target" />
	<div class="moduleTitle">
		<link href="index.php?module=Prospects&amp;action=index" click="false" />
		<browser assert="{@campaign.targets_create}" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_0845.csv" var="target0845">
		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@target0845.teamname}" /> 
		<button value="Search" />
		<link text="{@target0845.teamname}" />

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />                        
		<textfield name="last_name_advanced" set="{@target0845.assignto}" />                        
		<button value="Search" />
		<link text="{@target0845.assignto}" />

		<form id="EditView">
			<timestamp />

			<select name="salutation" set="{@target0845.salutation}" />
			<textfield name="first_name" set="{@target0845.first_name}" /> 
			<textfield id="last_name" set="{@target0845.last_name} {@user.name} {@stamp}" /> 
			<textfield id="title" set="{@target0845.title}" /> 
			<textfield id="department" set="{@target0845.department}" />
			<checkbox id="do_not_call" set="true" />
			<textfield id="Prospects0emailAddress0" set="{@target0845.email}" />
			<textfield name="phone_work" set="{@target0845.phone_work}" /> 
			<textfield name="phone_mobile" set="{@target0845.phone_mobile}" /> 
			<textfield name="phone_fax" set="{@target0845.phone_fax}" />
			<button value="Save" />
		</form>

		<browser assert="{@target0845.salutation} {@target0845.first_name} {@target0845.last_name} {@user.name} {@stamp}" />
	</csv>

	<script file="{@global.scriptsdir}/modules/lib/Target_Delete_Lib.xml" />

	<puts text="Test: Campaigns_0845.xml starting." />
</soda>