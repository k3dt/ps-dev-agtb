<soda>
	<!-- Campaign Wizard_Verify the opt-out link -->
	<puts text="Test: Campaigns_1181.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaigns" />

	<link id="moduleTab_Campaigns" />
	<div class="moduleTitle">
		<link href="index.php?module=Campaigns&amp;action=index" click="false" />
	</div>

	<link text="Create Campaign (Wizard)" />
	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_1166.csv" var="Campaign1181">
		<timestamp />
		<radio value="1" set="true" />
		<button id="startbutton" />
		<browser assert="Campaign Header" />
		<!--teams select-->            
		<table id="wizform_team_name_table">
			<textfield id="team_name_collection_0" set="" />
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Campaign1181.teamname}" /> 
		<button value="Search" />
		<link text="{@Campaign1181.teamname}" />
		<radio value="1" set="true" />

		<!--user select-->
		<div id="step1">
			<button value="Select" />
		</div>
		<browser assert="User Search" />                        
		<textfield name="last_name_advanced" set="{@Campaign1181.assignto}" />                        
		<button value="Search" />
		<link text="{@Campaign1181.assignto}" />

		<!--other fields-->
		<textfield id="name" set="{@Campaign1181.name} {@stamp}" />
		<select id="status" set="{@Campaign1181.status}" />
		<select id="frequency" set="{@Campaign1181.frequency}" />
		<textfield id="end_date" set="{@Campaign1181.end_date}" />
		<textfield id="wiz_content" set="{@Campaign1181.wiz_content}" />

		<button id="wiz_next_button" />
		<browser assert="Campaign Budget" />
		<textfield id="budget" set="{@Campaign1181.budget}" />
		<textfield id="actual_cost" set="{@Campaign1181.actual_cost}" />
		<textfield id="expected_revenue" set="{@Campaign1181.expected_revenue}" />
		<textfield id="expected_cost" set="{@Campaign1181.expected_cost}" />
		<select id="currency_id" set="{@Campaign1181.currency_id}" />
		<textfield id="objective" set="{@Campaign1181.objective}" />

		<button id="wiz_next_button" />
		<browser assert="Campaign Tracker URLs" />
		<textfield id="tracker_name" set="{@Campaign1181.tracker_name}" />
		<checkbox id="is_optout" set="true" />
		<wait timeout="2" />
		<div id="tracker_input_div">
			<button value="Create Tracker" />
		</div>
		<checkbox id="is_optout1" assert="true" />
		<button id="wiz_next_button" />
		<browser assert="Subscription Information" />

		<button id="wiz_submit_finish_button" />
		<button value="Edit Campaign" click="false" />
		<button value="View Status" click="false" />
		<button value="View ROI" click="false" />       
		<link text="{@Campaign1181.tracker_name}" click="false" />
		<link text="{@Campaign1181.name} {@stamp} Subscription List" click="false" />     
		<link text="{@Campaign1181.name} {@stamp} Unsubscription List" click="false" />
		<link text="{@Campaign1181.name} {@stamp} Test List" click="false" />
	</csv>

	<!--delete the test data-->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_1181.xml finished." />
</soda>