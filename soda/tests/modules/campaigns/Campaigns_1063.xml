<soda>
	<!-- the "Duplicate" function in the target detail -->
	<puts text="Test: Campaigns_1063.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaigns" />

	<!--Create a targetlist record-->
	<script file="{@global.scriptsdir}/modules/lib/Target_Create_Lib.xml" />

	<button id="duplicate_button" />
	<form id="EditView">
		<button value="Save" />
	</form>
	<browser assert="{@Target_First_Name} {@Target_Last_Name}" />

	<link text="View Targets" />
	<link href="index.php?module=Prospects&amp;action=index" click="false" />

	<!-- Clear the search conditions -->
	<checkbox name="current_user_only_basic" set="false" />
	<form id="search_form">
		<button name="clear" />
	</form>

	<!--Search the record-->
	<textfield id="search_name_basic" set="{@Target_Last_Name}" />
	<form id="search_form">
		<button value="Search" />
	</form>
	<span class="pageNumbers" assert="(1 - 2 of 2)" />

	<!--delete the test data-->
	<script file="{@global.scriptsdir}/modules/lib/Target_Delete_Lib.xml" />

	<puts text="Test: Campaigns_1063.xml finished." />
</soda>