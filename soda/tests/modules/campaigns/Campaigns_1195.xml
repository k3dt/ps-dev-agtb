<soda>
	<!-- Can select the campaign in the opp edit view -->
	<puts text="Test: Campaigns_1195.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaigns" />

	<!--Create a campaign record-->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" /> 

	<link id="moduleTab_Opportunities" />
	<div class="moduleTitle">
		<link href="index.php?module=Opportunities&amp;action=index" click="false" />
	</div>

	<link text="Create Opportunity" />
	<div class="moduleTitle">
		<link href="index.php?module=Opportunities&amp;action=index" click="false" />
		<browser assert="{@campaigns.opportunities_create}" />
	</div>

	<button id="btn_campaign_name" />
	<browser assert="Campaign Search" />

	<textfield id="name_advanced" set="{@Campaign_Name}" />
	<button value="Search" />

	<link text="{@Campaign_Name}" />
	
	<textfield id="campaign_name" assert="{@Campaign_Name}" />
	
	<link id="moduleTab_Campaigns" alert="true" />

	<!--Delete the test data-->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_1195.xml finished." />
</soda>