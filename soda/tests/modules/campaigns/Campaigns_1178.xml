<soda>
	<!-- Campaign Wizard - Verify the campaign has not the date campare -->
	<puts text="Test: Campaigns_1178.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaigns" />

	<link id="moduleTab_Campaigns" />
	<div class="moduleTitle">
		<link href="index.php?module=Campaigns&amp;action=index" click="false" />
	</div>

	<link text="Create Campaign (Wizard)" />
	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_1178.csv" var="Campaign1178">
		<timestamp />
		<radio value="1" set="true" />
		<button id="startbutton" />
		<browser assert="Campaign Header" />
		<!--teams select-->            
		<table id="wizform_team_name_table">
			<textfield id="team_name_collection_0" set="" />
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Campaign1178.teamname}" /> 
		<button value="Search" />
		<link text="{@Campaign1178.teamname}" />
		<radio value="1" set="true" />

		<!--user select-->
		<div id="step1">
			<button value="Select" />
		</div>
		<browser assert="User Search" />                        
		<textfield name="last_name_advanced" set="{@Campaign1178.assignto}" />                        
		<button value="Search" />
		<link text="{@Campaign1178.assignto}" />

		<!--other fields-->
		<textfield id="name" set="{@Campaign1178.name} {@stamp}" />
		<select id="status" set="{@Campaign1178.status}" />
		<select id="frequency" set="{@Campaign1178.frequency}" />
		<textfield id="end_date" set="{@Campaign1178.start_date}" />
		<textfield id="end_date" set="{@Campaign1178.end_date}" />
		<textfield id="wiz_content" set="{@Campaign1178.wiz_content}" />

		<button id="wiz_next_button" />
		<browser assert="Campaign Budget" />
	</csv>

	<puts text="Test: Campaigns_1178.xml finished." />
</soda>
