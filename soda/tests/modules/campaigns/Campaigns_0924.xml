<soda>
	<!-- "Create" target list on campaign details page -->
	<puts text="Test: Campaigns_0924.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/campaigns/CampaignAssertText.csv" var="campaign" />

	<!-- create a campaign record -->
	<script file="{@global.scriptsdir}/modules/lib/Campaign_Create_Lib.xml" />

	<div id="list_subpanel_prospectlists">
		<button name="ProspectLists_create_button" />
	</div>

	<csv file="{@global.scriptsdir}/csvs/campaigns/Campaigns_0924.csv" var="Campaign0924">
		<div class="moduleTitle">
			<link href="index.php?module=ProspectLists&amp;action=index" click="false" />
			<browser assert="{@campaign.target_lists_create}" />
		</div>
		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />                        
		<textfield name="last_name_advanced" set="{@Campaign0924.assignto}" />                        
		<button value="Search" />
		<link text="{@Campaign0924.assignto}" />

		<!--team select-->
		<table id="EditView_team_name_table" >
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@Campaign0924.teamname}" /> 
		<button value="Search" />
		<link text="{@Campaign0924.teamname}" />

		<!--other fields-->    
		<textfield id="name" set="{@Campaign0924.name}" />
		<select id="list_type" set="{@Campaign0924.type}" />
		<textfield id="description" set="{@Campaign0924.description}" /> 

		<button value="Save" />
	</csv>
	<browser assert="{@Campaign0924.description}" />

	<script file="{@global.scriptsdir}/modules/lib/Campaign_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/TargetList_Delete_Lib.xml" />

	<puts text="Test: Campaigns_0924.xml starting." />
</soda>