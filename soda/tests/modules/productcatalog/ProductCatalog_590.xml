<soda>
    <puts text="---ProductCatalog_590.xml---Starting!" />
    <!--Verify that cost and price fields in product catalog are displayed in detail view.-->
    <csv file="{@global.scriptsdir}/csvs/productcatalog/ProductCatalog_590.csv" var="catalog_record_590" >
        <script file="{@global.scriptsdir}/modules/lib/ProductCategory_Create_Lib.xml" />
        <script file="{@global.scriptsdir}/modules/lib/Manufacturer_Create_Lib.xml" />
        <script file="{@global.scriptsdir}/modules/lib/ProductType_Create_Lib.xml" />
        <link href="index.php?module=Administration&amp;action=index" />
	    <link text="Product Catalog" />
        <link text="Create Product for Catalog" />
        <form id="EditView" >
            <textfield name="name" set="{@catalog_record_590.name} {@user.name} {@stamp}" />
            <button id="btn_category_name" />          
        </form>
        <table class="list view" >
            <link text="{@ProductCategory_Create_Lib}" />
        </table>
        <form id="EditView" >
            <textfield id="cost_price" set="{@catalog_record_590.cost_price}" />
            <textfield id="list_price" set="{@catalog_record_590.list_price}" />
            <textfield id="discount_price" set="{@catalog_record_590.discount_price}" />                        
            <button name="button" value="Save" />
        </form>
        <link href="index.php?module=ProductTemplates&amp;action=index&amp;return_module=ProductTemplates&amp;return_action=DetailView" />
            
        <link text="Basic Search" required="false" />
        <button id="search_form_clear" />
        <form id="search_form" >
            <textfield id="name_basic" set="{@catalog_record_590.name} {@user.name} {@stamp}" />
        </form>
        <button id="search_form_submit" />
        <table class="list view" >
            <browser assert="{@catalog_record_590.name} {@user.name} {@stamp}" />
            <link text="{@catalog_record_590.name} {@user.name} {@stamp}" />
        </table>
             
        <browser assert="{@catalog_record_590.name} {@user.name} {@stamp}" />
        <browser assert="{@catalog_record_590.verify_cost_price}" />
        <browser assert="{@catalog_record_590.verify_list_price}" />
        <browser assert="{@catalog_record_590.verify_discount_price}" />                        
    </csv>
    
	<!--Run Delete XML-->
    <script file="{@global.scriptsdir}/modules/lib/ProductCatalog_Delete_Lib.xml" />
    <script file="{@global.scriptsdir}/modules/lib/ProductCategory_Delete_Lib.xml" />
    <script file="{@global.scriptsdir}/modules/lib/Manufacturer_Delete_Lib.xml" />
    <script file="{@global.scriptsdir}/modules/lib/ProductType_Delete_Lib.xml" />
    <puts text="---ProductCatalog_590.xml---Finished!" />
</soda>
