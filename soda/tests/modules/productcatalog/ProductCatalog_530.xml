<soda>
    <puts text="---ProductCatalog_530.xml: Verify that creating product catalog can be canceled..---Start!"/>
    <csv file="{@global.scriptsdir}/csvs/productcatalog/ProductCatalog_530.csv" var="ProductCatalog_530">
        <script file="{@global.scriptsdir}/modules/lib/ProductCategory_Create_Lib.xml" />
        <script file="{@global.scriptsdir}/modules/lib/Manufacturer_Create_Lib.xml" />
        <script file="{@global.scriptsdir}/modules/lib/ProductType_Create_Lib.xml" />
        <link text="Admin"/>
        <link text="Product Catalog"/>
        <timestamp/>
        <link text="Create Product for Catalog" />
        <textfield name="name" set="{@ProductCatalog_530.name} {@user.name} {@stamp}" />
        <button id="btn_category_name" />

        <table class="list view">
            <link text="{@ProductCategory_Create_Lib}" />
        </table>

        <form id="EditView">
            <textfield id="cost_price" set="{@ProductCatalog_530.cost_price}" />
            <textfield id="list_price" set="{@ProductCatalog_530.list_price}" />
            <textfield id="discount_price" set="{@ProductCatalog_530.discount_price}" />
            <button name="button" value="Cancel" alert="true" />
        </form>

        <link text="Basic Search" required="false"/>
        <button id="search_form_clear"/>
        <form id="search_form">
            <textfield id="name_basic" set="{@ProductCatalog_530.name} {@user.name} {@stamp}"/>
        </form>
        <button id="search_form_submit"/>

        <table class="list view">
            <browser assert="{@ProductCatalog_530.name} {@user.name} {@stamp}" exist="false"/>
        </table>
    </csv>

    <!--Run Delete XML-->
    <script file='{@global.scriptsdir}/modules/lib/ProductType_Delete_Lib.xml'/>
    <script file='{@global.scriptsdir}/modules/lib/Manufacturer_Delete_Lib.xml'/>
    <script file='{@global.scriptsdir}/modules/lib/ProductCategory_Delete_Lib.xml'/>
    <puts text="---ProductCatalog_530.xml---Finished!"/>
</soda>
