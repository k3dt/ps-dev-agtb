<soda>
	<!-- Verify that deleting a meeting is canceled when clicking "Cancel" button -->
	<puts text="Test: Calendar_0698.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/calendar/CalendarAssertText.csv" var="calendar" />

	<!-- Create a meeting record. -->
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Create_Lib.xml" />

	<div id="Meetings">
		<link text="View Meetings" />
	</div>
	<div class="moduleTitle">
		<link href="index.php?module=Meetings&amp;action=index" click="false" />
	</div>

	<button id="search_form_clear" />
	<button id="search_form_submit" />

	<form id="MassUpdate">
		<link text="{@pre_meeting_name}" />
	</form>
	<div class="moduleTitle">
		<link href="index.php?module=Meetings&amp;action=index" click="false" />
		<browser assert="{@pre_meeting_name}" />
	</div>

	<button value="Delete" alert="false" />
	<div class="moduleTitle">
		<link href="index.php?module=Meetings&amp;action=index" click="false" />
		<browser assert="{@pre_meeting_name}" />
	</div>

	<div id="Meetings">
		<link text="View Meetings" />
	</div>

	<button id="search_form_clear" />
	<textfield id="name_basic" set="{@pre_meeting_name}" />
	<button id="search_form_submit" />
	<form id="MassUpdate">
		<span class="pageNumbers" assert="(1 - 1 of 1)" />
	</form>

	<puts text="Test: Calendar_0698.xml finished." />
</soda>