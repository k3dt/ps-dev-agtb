<soda>
	<!-- Verify that task detail view page is displayed -->
	<puts text="Test: Calendar_0663.xml starting." />
	<csv file="{@global.scriptsdir}/csvs/calendar/CalendarAssertText.csv" var="calendar" />

	<!--Create a task record-->
	<script file="{@global.scriptsdir}/modules/lib/Task_Create_Lib.xml" />

	<!--Go to Calendar -->
        <link id="moduleTab_Activities" />
	<link text="View Calendar" />
	<div class="moduleTitle">
		<link href="index.php?module=Calendar&amp;action=index" click="false" />
	</div>
	<browser assert="{@calendar.calendar_task_list}" />

	<!-- click on task -->
	<link text="View Tasks" />
	<form id="MassUpdate">
		<link text="{@pre_task_name}" />
	</form>
	<div class="moduleTitle">
		<link href="index.php?module=Tasks&amp;action=index" click="false" />
		<browser assert="{@pre_task_name}" />
	</div>
	
	<!-- Delete task record. -->
	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />

	<puts text="Test: Calendar_0663.xml finished." />
</soda>