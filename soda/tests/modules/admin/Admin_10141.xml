<soda>
	<!--
		Actions:
			Login as admin
			Go to Admin | Studio
			Select the module mentioned in set up, and go to 
		 		Fields page (OOB module or customer module)
			Edit a field or create a new field
			Check Calculated check box
			Click Edit Formula button
			Choose function from the functions list, 
				such as abs, and, charAt
			Choose fields for the function that not
				fit for the function parameter numbers
			Click Save button 
		Results:
			A warning message show that 'Requires exactly x parameter'
	-->
	<puts text="Text: Admin_10141.xml Starting." />
	
	<link text="Admin" />
	<link text="Studio" />

	<div id="Buttons">
		<link text="/.*Accounts.*/" />
		<link text="/.*Fields.*/" />
	</div>
	
	<button value="Add Field" />
	
	<select id="type" set="Integer" />
	<checkbox id="calculated" set="true" />
	<wait timeout="5" />
	<textfield id="field_name_id" set="somenum" />
	<button name="editFormula" />
	
	<textarea id="formulaInput" 
		set="abs(0,3,2)" />
	<wait timeout="6" />

	<button id="fomulaSaveButton" />
	<wait timeout="9" />

	<div id="sugarMsgWindow">
		<div id="sugarMsgWindow_h" assert="Validation Failed" />
		<div class="bd" assert="/.*Requires exactly \d+ parameter.*/" />
	</div>

	<button value="Cancel" />

	<button name="cancelbtn" />
	


	<puts text="Test: Admin_10141.xml finished." />
</soda>
