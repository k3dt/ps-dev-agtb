<soda>
	<!--

		Action:
			Login as admin
			Go to Admin | Studio
			Select a module and go to Fields page (OOB module or custom module)
			Open the edit page of a field
			Check Calculated check box
			Create a formula for the field
			Click Save button
		Result:
		
			The field saved successful

	-->
	<puts text="Test: Admin_10298.xml starting." />

	<link text="Admin" />
	<link text="Studio" />

	<div id="Buttons">
		<link text="/.*Accounts.*/" />
		<link text="/.*Fields.*/" />
	</div>
	
	<button value="Add Field" />
	
	<textfield id="field_name_id" set="upperCity" />
	<checkbox id="calculated" set="true" />
	<button name="editFormula" />
	
	<wait timeout="3" />
	<textarea id="formulaInput" set="strToUpper($billing_address_city)" />
	
	<button id="fomulaSaveButton" />
	<button name="fsavebtn" />
	<wait timeout="12" />
	
	<browser assert="upperCity_c" />

	<link text="upperCity_c" />
	
	<button value="Delete" alert="true" />
	<wait timeout="6" />
	
	
	<puts text="Test: Admin_10298.xml finished." />
</soda>