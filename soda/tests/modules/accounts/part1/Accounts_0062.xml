<soda>
	<!--
		Account Detail - Contacts sub-panel - Select_Verify that the contact can be
		selected by checking the check box in front of the contact records from the
		select contacts pop-up box.
	-->
	<puts text="Test: Accounts_0062.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Goto contact subpanel & click "Select" -->
	<browser assert="{@pre_account_name}" />
	<button id="accounts_contacts_select_button" />
	<wait timeout="5" />
	<!--click the checkbox and click "Select"-->
	<table class="list view">
		<checkbox value="{@pre_contact_id}" click="true" />
	</table>
	<form id="MassUpdate">
		<button value="Select" />
	</form>
	<wait timeout="5" />
	<!--back to contact subpanel-->
	<div id="list_subpanel_contacts">
		<table class="list view">
			<link text="{@pre_contact_first_name} {@pre_contact_last_name}" click="false" />
		</table>
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />

	<puts text="Test: Accounts_0062.xml finished." />
</soda>
