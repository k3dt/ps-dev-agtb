<soda>
	<puts text="Test: Accounts_0059.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />

	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<button id="accounts_contacts_create_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0035.csv" var="contact_record_0059">
		<form id="form_SubpanelQuickCreate_Contacts">
			<textfield id="first_name"
				set="{@contact_record_0059.first_name} {@user.name} {@stamp}" />
			<textfield id="last_name" set="{@contact_record_0059.last_name}" />
			<textfield id="title" set="{@contact_record_0059.title}" />
			<textfield id="phone_work" set="{@contact_record_0059.phone_work}" />
			<textfield id="phone_mobile" set="{@contact_record_0059.phone_mobile}" />
			<textfield id="phone_fax" set="{@contact_record_0059.phone_fax}" />
			<textfield id="Contacts0emailAddress0" set="{@contact_record_0059.emailAddress0}" />
			<select id="lead_source" set="{@contact_record_0059.lead_source}" />
			<checkbox id="do_not_call" set="{@contact_record_0059.do_not_call}" />
		</form>

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Contacts_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@contact_record_0059.team_name}" />
		<button value="Search" />
		<link text="{@contact_record_0059.team_name}" />

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@contact_record_0059.assigned_user_name}" />
		<button value="Search" />
		<link text="{@contact_record_0059.assigned_user_name}" />

		<!--Cancel the fields-->
		<button value="Cancel" alert="true" />

		<!--Verify the history record not created-->
		<div id="list_subpanel_contacts">
			<table class="list view">
				<span class="pageNumbers" assert="(0 - 0 of 0)" />
			</table>
		</div>
	</csv>
	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0059.xml finished." />
</soda>
