<soda>
	<puts text="Test: Accounts_0048.xml" />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<link href="index.php?module=Accounts&amp;action=index" click="false" />
	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>

	<!--Go to its detail view-->
	<link text="Accounts" click="false" />
	<browser assert="{@pre_account_name}" />

	<!--Create a case in Cases Subpanel-->
	<button name="account_cases_create_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0105.csv" var="case_record_0105">
		<form id="form_SubpanelQuickCreate_Cases">
			<textfield id="name" set="{@case_record_0105.name} {@user.name} {@stamp}" />
			<select id="status" set="{@case_record_0105.status}" />
			<select id="priority" set="{@case_record_0105.priority}" />
			<textfield id="description" set="{@case_record_0105.description}" />
			<!--user select: use default value-->
			<!--teams select: use default value-->
			<button id="Cases_subpanel_save_button" />
		</form>
	</csv>
	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view & click "edit" image-->
	<browser assert="{@pre_account_name}" />
	<div id="list_subpanel_cases">
		<span class="pageNumbers" assert="(1 - 1 of 1)" />
		<link class="listViewTdToolsS1" index="1" />
	</div>

	<!--edit the case record-->
	<browser assert="Cases"/>
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0048.csv" var="case_record_0048">
		<textfield id="name" set="{@case_record_0048.name} {@user.name} {@stamp}" />
		<textfield id="description" set="{@case_record_0048.description}" />
		<select id="status" set="{@case_record_0048.status}" />
		<select id="priority" set="{@case_record_0048.priority}" />

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@case_record_0048.assigned_user_name}" />
		<button value="Search" />
		<link text="{@case_record_0048.assigned_user_name}" />

		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@case_record_0048.team_name}" />
		<button value="Search" />
		<link text="{@case_record_0048.team_name}" />

		<button value="Save" />

		<!--return account case subpanel-->
		<div id="list_subpanel_cases">
			<table class="list view">
				<link text="{@case_record_0048.name} {@user.name} {@stamp}" click="false" />
			</table>
		</div>
	</csv>


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	<puts text="Test: Accounts_0048.xml finished." />
</soda>
