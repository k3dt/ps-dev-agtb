<soda>
	<!--
		Sort Account_Verify that account records can be sorted ASC/DESC by column
		titles on account list view.
	-->
	<puts text="Test: Accounts_0016.xml starting." />

	<!--Create 3 account records-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<var var="account_name1" set="{@pre_account_name}" />

	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<var var="account_name2" set="{@pre_account_name}" />

	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<var var="account_name3" set="{@pre_account_name}" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<button id="search_form_clear" />
	<button id="search_form_submit" />
	<wait timeout="10" />
	<form id="MassUpdate">
		<link class="listViewThLinkS1" />
	</form>
	<table class="list view">
		<row class="oddListRowS1" index="1" >
			<link text="{@account_name1}" click="false" />
		</row>
		<row class="evenListRowS1" index="1" >
			<link text="{@account_name2}" click="false" />
		</row>
		<row class="oddListRowS1" index="2" >
			<link text="{@account_name3}" click="false" />
		</row>
	</table>

	<form id="MassUpdate">
		<link class="listViewThLinkS1" />
	</form>

	<table class="list view">
		<row class="oddListRowS1" index="1" >
			<link text="{@account_name3}" click="false" />
		</row>
		<row class="evenListRowS1" index="1" >
			<link text="{@account_name2}" click="false" />
		</row>
		<row class="oddListRowS1" index="2" >
			<link text="{@account_name1}" click="false" />
		</row>
	</table>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0016.xml finished." />
</soda>
