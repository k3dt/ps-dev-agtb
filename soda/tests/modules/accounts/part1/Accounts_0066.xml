<soda>
	<puts text="Test: Accounts_0066.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Goto opp subpanel & click "Cancel"-->
	<button name="accounts_opportunities_Create_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0043.csv" var="opp_record_0066">
		<form id="form_SubpanelQuickCreate_Opportunities">
			<textfield id="name" set="{@opp_record_0066.name} {@user.name} {@stamp}" />
			<textfield id="amount" set="{@opp_record_0066.amount}" />
			<textfield id="probability" set="{@opp_record_0066.probability}" />
			<textfield id="date_closed" set="{@opp_record_0066.date_closed}" />

			<select id="opportunity_type" set="{@opp_record_0066.opportunity_type}" />
			<select id="lead_source" set="{@opp_record_0066.lead_source}" />
			<select name="currency_id" set="{@opp_record_0066.currency_id}" />
			<select id="sales_stage" set="{@opp_record_0066.sales_stage}" />
		</form>

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@opp_record_0066.assigned_user_name}" />
		<button value="Search" />
		<link text="{@opp_record_0066.assigned_user_name}" />

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Opportunities_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@opp_record_0066.team_name}" />
		<button value="Search" />
		<link text="{@opp_record_0066.team_name}" />

		<button id="Opportunities_subpanel_cancel_button" alert="true" />

		<!--Verify-->
		<div id="list_subpanel_opportunities">
			<span class="pageNumbers" assert="(0 - 0 of 0)" />
		</div>
	</csv>


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

	<puts text="Test: Accounts_0066.xml finished." />

</soda>
       
