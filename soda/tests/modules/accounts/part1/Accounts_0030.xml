<soda>
	<!--
		Mass Delete Account_Verify that selected account records to be mass updated
		are deleted from accounts list view.
	-->
	<puts text="Test: Accounts_0030.xml starting." />


	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />

	<!--Mass Update-->
	<checkbox name="massall" set="true" />
	<link id="actions_link" />
	<link text="Mass Update" />

	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0029.csv" var="mass_update_record_0030" />
	<table id="mass_update_table">
		<select id="mass_industry" set="{@mass_update_record_0030.mass_industry}" />
		<select id="mass_account_type" set="{@mass_update_record_0030.mass_account_type}" />
	</table>

	<!--Delete All-->
	<button id="search_form_clear" />
	<button id="search_form_submit" />
	<wait timeout="3" />
	<checkbox name="massall" click="true" />
	<link id="actions_link" />
	<link text="Delete" alert="true" />
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<wait timeout="3" />
	<table class="list view">
		<span class="pageNumbers" assert="(0 - 0 of 0)" />
	</table>


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0030.xml finished." />

</soda>
                
