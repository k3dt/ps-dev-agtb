<soda>
	<puts text="Test: Accounts_0057.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<wait />
	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create History Subpanel & Click "Archive Email" button-->
	<div id="list_subpanel_history">
		<button value="  Archive Email  " />
	</div>
	<browser assert="Create Archived Emails:" />

	<!--Edit Email-->
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0057.csv" var="history_record_0057">
		<textfield id="jscal_field" set="{@history_record_0057.jscal_field}" />
		<textfield name="time_start" set="{@history_record_0057.time_start}" />

		<textfield id="to_addrs_field" set="{@history_record_0057.to_addrs_field}" />
		<textfield id="cc_addrs_field" set="{@history_record_0057.cc_addrs_field}" />
		<textfield id="subjectfield" set="{@history_record_0057.subjectfield}" />

		<!--user select-->
		<button name="btn1" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@history_record_0057.assigned_user_name}" />
		<button value="Search" />
		<link text="{@history_record_0057.assigned_user_name}" />

		<button value="  Save  " />


		<!--Verify the record exists in the history subpanel-->
		<div id="list_subpanel_history">
			<table class="list view">
				<link click="false" text="{@history_record_0057.subjectfield}" />
			</table>
		</div>
	</csv>

	<div id="list_subpanel_history">
		<link text="{@history_record_0057.subjectfield}" />
	</div>
	<wait timeout="3" />
	<button value="    Delete    " alert="true" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0057.xml finished." />
</soda>
