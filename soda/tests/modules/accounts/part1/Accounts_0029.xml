<soda>
	<puts text="Test: Accounts_0029.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<checkbox name="massall" set="true" />
	<link id="actions_link" />
	<link text="Mass Update" />

	<!--Mass Update-->
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0029.csv" var="mass_update_record_0029" />

	<select id="mass_industry" set="{@mass_update_record_0029.mass_industry}" />

	<select id="mass_account_type" set="{@mass_update_record_0029.mass_account_type}" />

	<button id="update_button" alert="true" />


	<!---Verify the update fields-->
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
		<browser assert="{@pre_account_name}" />
	</div>

	<button id="edit_button" />

	<select id="industry" assert="{@mass_update_record_0029.mass_industry}" />

	<select id="account_type" assert="{@mass_update_record_0029.mass_account_type}" />


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0029.xml finished." />
</soda>               
