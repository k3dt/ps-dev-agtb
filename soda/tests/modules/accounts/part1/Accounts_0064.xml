<soda>
	<puts text="Test: Accounts_0064.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Goto contact subpanel & click "Select" -->
	<button id="accounts_contacts_select_button" />

	<!--Create Contact-->
	<button value="Create Contact" />

	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0064.csv" var="contact_record_0064">
		<div id="addform">
			<textfield name="first_name"
				set="{@contact_record_0064.first_name} {@user.name} {@stamp}" />
			<textfield name="last_name" set="{@contact_record_0064.last_name}" />
			<textfield name="phone_work" set="{@contact_record_0064.phone_work}" />

			<button value="Save" />


		</div>

		<wait />
		<button value="Search" />

		<!--Assert in the contact list view-->
		<table class="list view">
			<link
				text="{@contact_record_0064.first_name} {@user.name} {@stamp} {@contact_record_0064.last_name}" />
		</table>

	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Contact_Delete_Lib.xml" />

	<puts text="Test: Accounts_0064.xml finsihed." />

</soda>
