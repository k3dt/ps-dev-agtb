<soda>
	<puts text="Test: Accounts_0007.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>

	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />
	<button id="edit_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0007.csv" var="account_record_0007">
		<!--teams select-->
		<table id="EditView_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@account_record_0007.team_name}" />
		<button value="Search" />
		<link text="{@account_record_0007.team_name}" />

		<form id="EditView">
			<textfield id="name" set="{@account_record_0007.name} {@user.name} {@stamp}" />
		</form>
		<button value="Save" />
		<browser assert="{@account_record_0007.name} {@user.name} {@stamp}" />
	</csv>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0007.xml finished." />
</soda>
