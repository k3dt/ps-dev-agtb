<soda>

	<!--
		Status of the task related to the account is changed into completed by
		clicking "Close" icon.
	-->

	<puts text="Test: Accounts_3042.xml started." />

	<!--Create one account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Create one activity-->
	<button name="Activities_createtask_button" />
	<form id="form_SubpanelQuickCreate_Tasks">
		<textfield id="name" set="activity_3042" />

	</form>
	<button id="Tasks_subpanel_save_button" />
	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Verify the task record created in subpanel-->
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="activity_3042" click="false" />
		</table>
		<!--click "close"-->
		<row class="oddListRowS1">
			<link index="2" alert="true" />
		</row>
	</div>
	<wait timeout="3" />
	<div id="closeActivityDialog_c">
		<button text="OK" />
	</div>
	<wait timeout="45" />
	<div id="list_subpanel_activities">
		<span class="pageNumbers" assert="(0 - 0 of 0)" />
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Task_Delete_Lib.xml" />
	<puts text="Test: Accounts_3042.xml finished." />
</soda>
