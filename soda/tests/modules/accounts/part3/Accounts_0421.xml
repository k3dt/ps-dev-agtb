<soda>
	<!--
		Select _Verify that the lead can be selected by checking the check box in
		front of the lead records from the select leads pop-up box.
	-->
	<puts text="Test: Accounts_0421.xml starting." />


	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Create_Lib.xml" />


	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<browser assert="Accounts" />


	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>


	<!--Go its detail view && click "Select"-->
	<browser assert="{@pre_account_name}" />
	<button id="account_leads_select_button" />
	<table class="list view">
		<checkbox value="{@pre_lead_id}" click="true" />
	</table>
	<button value="Select" />


	<div id="list_subpanel_leads">
		<span class="pageNumbers" assert="(1 - 1 of 1)" />
	</div>


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Lead_Delete_Lib.xml" />
	<puts text="Test: Accounts_0421.xml finished." />
</soda>
