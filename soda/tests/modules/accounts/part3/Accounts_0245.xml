<soda>
	<!--
		Account Detail - Activities sub-panel - Edit Call_Verify that editing
		"Schedule Call" is canceled.
	-->
	<puts text="Test: Accounts_0245.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Create Call-->
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0243.csv" var="call_record_245" />
	<div id="list_subpanel_activities">
		<button value="  Log Call  " />
	</div>
	<div id="form_SubpanelQuickCreate_Calls_tabs">
		<textfield name="name" set="{@call_record_245.name}" />
		<select id="date_start_hours" set="{@call_record_245.date_start_hours}" />
		<select id="date_start_minutes" set="{@call_record_245.date_start_minutes}" />
	</div>

	<button id="Calls_subpanel_save_button" />
	<wait timeout="10" />
	<!-- Verify call is created -->
	<div id="list_subpanel_activities">
		<table class="list view">
			<span class="pageNumbers" assert="(1 - 1 of 1)" />
		</table>
	</div>

	<!-- Edit Call then cancel changes -->
	<div id="list_subpanel_activities">
		<table class="list view">
			<link class="listViewTdToolsS1" index="1" />
		</table>
	</div>
	<textfield name="name" set="{@call_record_245.name2}" />

	<button value="Cancel" alert="true" />
	<wait timeout="3" />

	<!-- Verify that no changes occur to call -->
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@call_record_245.name}" click="false" />
		</table>
	</div>


	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Call_Delete_Lib.xml" />
	<puts text="Test: Accounts_0245.xml finished." />
</soda>
