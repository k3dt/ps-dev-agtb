<soda>
	<!--
		Account Detail - Cases sub-panel - Edit _Verify that editing "Cases" is
		correctly canceled on "Cases" sub-panel.
	-->
	<puts text="Test: Accounts_0263.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create Case via Subpanel-->
	<button name="account_cases_Create_button" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0044.csv" var="lead_record_0260">
		<form id="form_SubpanelQuickCreate_Cases">
			<textfield id="name" set="{@lead_record_0260.first_name} {@stamp}" />
		</form>

		<!--user select-->
		<button id="btn_assigned_user_name" />
		<browser assert="User Search" />
		<textfield name="last_name_advanced" set="{@lead_record_0260.assigned_user_name}" />
		<button value="Search" />
		<link text="{@lead_record_0260.assigned_user_name}" />

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Cases_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@lead_record_0260.team_name}" />
		<button value="Search" />
		<link text="{@lead_record_0260.team_name}" />

		<button id="Cases_subpanel_cancel_button" alert="true" />
	</csv>

	<div id="list_subpanel_cases">
		<browser assertnot="{@lead_record_0260.team_name}" />
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Case_Delete_Lib.xml" />
	<puts text="Test: Accounts_0263.xml finished." />
</soda>
