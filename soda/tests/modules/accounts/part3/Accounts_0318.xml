<soda>
	<!--
		Edit Account_Verify that error message "Missing required field: Name" is
		displayed when editing an account record with mandatory fields blank.
	-->
	<puts text="Test: Accounts_0318.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<browser assert="Accounts" />

	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />
	<button id="edit_button" />

	<!--clear mandatory fields -->
	<textfield id="name" set="" />
	<button value="Save" />

	<browser assert="Missing required field: Name" />
	<button value="Cancel" alert="true" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0318.xml finished." />
</soda>
