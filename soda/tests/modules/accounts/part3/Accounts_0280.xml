<soda>
	<!--
		Account Detail - Activities sub-panel - Remove Relationship - Meeting_Verify
		that deleting meeting is canceled.
	-->
	<puts text="Test: Accounts_0280.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Create Schedule Meeting-->
	<browser assert="{@pre_account_name}" />
	<div id="list_subpanel_activities">
		<button value="  Schedule Meeting  " />
	</div>
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0240.csv" var="meeting_record_0280">
		<form id="form_SubpanelQuickCreate_Meetings">
			<textfield id="name" set="{@meeting_record_0280.name} {@stamp}" />
			<textfield id="location" set="{@meeting_record_0280.location}" />
			<textfield id="date_start_date" set="{@currentdate}" />
			<textfield id="description" set="{@meeting_record_0280.description}" />

			<select id="date_start_hours" set="{@meeting_record_0280.date_start_hours}" />
			<select id="date_start_minutes" set="{@meeting_record_0280.date_start_minutes}" />
			<select name="duration_minutes" set="{@meeting_record_0280.duration_minutes}" />
			<select id="status" set="{@meeting_record_0280.status}" />

			<button id="Meetings_subpanel_save_button" />
		</form>
	</csv>

	<wait timeout="20" />
	<div id="list_subpanel_activities">
		<table class="list view">
			<span class="pageNumbers" assert="(1 - 1 of 1)" />
		</table>
	</div>

	<!--Save the subpanel task id & name-->
	<form name="DetailView">
		<hidden name="record" var="pre_activity_meeting_subpanel_id" />
	</form>
	<var var="pre_activity_meeting_subpanel_name" set="{@meeting_record_0280.name} {@stamp}" />
	
	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Create Schedule Meeting & click "rem"-->
	<browser assert="{@pre_account_name}" />
	<div id="list_subpanel_activities">
		<table class="list view">
			<link text="{@pre_activity_meeting_subpanel_name}" click="false" />
		</table>
		<link class="listViewTdToolsS1" index="2" alert="false" />
	</div>

	<wait />
	<div id="list_subpanel_activities">
		<span class="pageNumbers" assert="(1 - 1 of 1)" />
		<link text="{@pre_activity_meeting_subpanel_name}" click="false" />
	</div>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Meeting_Delete_Lib.xml" />
	<puts text="Test: Accounts_0280.xml finished." />
</soda>
