<soda>
	<!--
		Account Detail - Cases sub-panel: Verify that error message "Missing required
		field: Subject" is displayed
	-->
	<puts text="Test: Accounts_0230.xml starting." />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>

	<!--Go to its detail view-->
	<link text='Accounts' click='false' />
	<browser assert="{@pre_account_name}" />

	<!--Create a case in Cases Subpanel, and don"t fill in all mandatory fields-->
	<button name="account_cases_create_button" />
	<wait timeout="6" />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0230.csv" var="case_record_0230">
		<form id="form_SubpanelQuickCreate_Cases">
			<select id="status" set="{@case_record_0230.status}" />
			<select id="priority" set="{@case_record_0230.priority}" />
			<textfield id="description" set="{@case_record_0230.description}" />
		</form>
		<button id="Cases_subpanel_save_button" />
		<wait timeout="3" />

		<!--Verify-->
		<browser assert="Missing required field: Subject" />
	</csv>
	<button value="Cancel" alert="true" />
	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0230.xml finished." />
</soda>
            
