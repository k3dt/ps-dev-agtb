<soda>
	<!--
		Account Detail - Activities sub-panel - Schedule Meeting_Verify that creating
		new "Schedule Meeting" is canceled for Activities under "Cases" sub-panel.
	-->
	<puts text="Test: Accounts_0213.xml starting." />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!--Go its detail view-->
	<browser assert="{@pre_account_name}" />

	<!--Create Meeting in Activities Subpanel-->
	<button value="  Schedule Meeting  " />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0032.csv" var="meeting_record_0213">
		<form id="form_SubpanelQuickCreate_Meetings">
			<textfield id="name" set="{@meeting_record_0213.name} {@user.name} {@stamp}" />
			<textfield id="description" set="{@meeting_record_0213.description}" />

			<!--Start Date-->
			<textfield id="date_start_date" set="{@meeting_record_0213.date_start_date}" />
			<select id="date_start_hours" set="{@meeting_record_0213.date_start_hours}" />
			<select id="date_start_minutes" set="{@meeting_record_0213.date_start_minutes}" />
			<select id="date_start_meridiem" set="{@meeting_record_0213.date_start_meridiem}"
				required="false" />
		</form>

		<!--teams select-->
		<table id="form_SubpanelQuickCreate_Meetings_team_name_table">
			<button value="Select" />
		</table>
		<browser assert="Team Search" />
		<textfield name="name" set="{@meeting_record_0213.team_name}" />
		<button value="Search" />
		<link text="{@meeting_record_0213.team_name}" />


		<button id="Meetings_subpanel_cancel_button" alert="true" />


		<wait timeout="3" />


		<!--Verify the task record created in subpanel-->
		<div id="list_subpanel_activities">
			<span class="pageNumbers" assert="(0 - 0 of 0)" />
		</div>
	</csv>
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0213.xml finished." />
</soda>
