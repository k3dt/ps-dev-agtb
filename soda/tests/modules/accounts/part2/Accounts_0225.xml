<soda>
	<!--
		Account Detail - Opportunities sub-panel - Select _Verify that the search
		condition on the select opportunities pop-up box can be cleared.
	-->
	<puts text="Test: Accounts_0225.xml starting." />

	<!-- Creat an Opportunity -->
	<script file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml" />

	<!--Create a account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />
	<table class="list view">
		<link text="{@pre_account_name}" />
	</table>

	<!-- Click "Select" button on Opp subpanel -->
	<div id="list_subpanel_opportunities">
		<button id="accounts_opportunities_select_button" />
	</div>
	<textfield id="name_advanced" set="Text" />
	<button value="Search" />
	<textfield id="name_advanced" assert="Text" />

	<button value="Clear" />
	<textfield id="name_advanced" assert="" />
	<button value="Search" />

	<!-- Verify All Opp's appear on list view -->
	<table class="list view">
		<row class="pagination">
			<span class="pageNumbers" assert="(1 - 1 of 1)" />
		</row>
	</table>

	<!-- The following step is needed to clean up -->
	<table class="list view">
		<link text="{@pre_opp_name}" />
	</table>

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />

	<puts text="Test: Accounts_0225.xml finished." />
</soda>
