<soda>
	<!--
		Account Detail - History sub-panel: Archive Email: Verify that error message
		"Missing required field: Date Start" is displayed when creating a related new
		"Archive Email" with mandatory fields blank.
	-->
	<puts text="Test: Accounts_0220.xml starting." />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<wait timeout="3" />

	

	<!--Click "Create Archived Emails"-->
	<div id="list_subpanel_history">
		<button value="  Archive Email  " />
	</div>
	<browser assert="Create Archived Emails" />
	<button value="  Save  " />
	<browser assert="Missing required field: Date Start" />
	<browser assert="Missing required field: Time Sent" />

	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0220.xml finished." />
</soda>
    
