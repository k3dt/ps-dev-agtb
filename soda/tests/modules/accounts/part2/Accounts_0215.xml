<soda>
	<!--
		Schedule Call: Verify that error message "Missing required field: Subject" is
		displayed when creating related new Call with mandatory fields blank.
	-->
	<puts text="Test: Accounts_0215.xml starting." />

	<!--Create an account record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Search the record-->
	<link id="moduleTab_Accounts" />
	<div class="moduleTitle">
		<link href="index.php?module=Accounts&amp;action=index" click="false" />
	</div>
	<link text="Basic Search" required="false" />
	<form id="search_form">
		<button id="search_form_clear" />
		<textfield id="name_basic" set="{@pre_account_name}" />
		<button id="search_form_submit" />
	</form>

	<table class="list view">
		<browser assert="{@pre_account_name}" />
		<link text="{@pre_account_name}" />
	</table>
	<link text="Accounts" click="false" />
	<browser assert="{@pre_account_name}" />

	<!--Create a Log Call-->
	<button value="  Log Call  " />
	<csv file="{@global.scriptsdir}/csvs/accounts/Accounts_0215.csv" var="call_record_0215">
		<textfield id="date_start_date" set="{@currentdate}" />
		<select id="date_start_hours" set="{@call_record_0215.date_start_hours}" />
		<select id="date_start_minutes" set="{@call_record_0215.date_start_minutes}" />
		<select name="duration_minutes" set="{@call_record_0215.duration_minutes}" />
		<textfield id="description" set="{@call_record_0215.description}" />
		<select id="status" set="{@call_record_0215.status}" />

		<button id="Calls_subpanel_save_button" />
	</csv>
	<browser assert="Missing required field: Subject" />
	<button value="Cancel" alert="true" />
	<!--Delete the record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Accounts_0215.xml finished." />
</soda>
