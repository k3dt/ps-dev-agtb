<soda>
	<!-- Verify that an email can be related to an Opportunity -->
	<puts text="Test: Emails_9682.xml starting." />

	<script file="{@global.scriptsdir}/modules/lib/Opp_Create_Lib.xml" />

	<!--goto opp moudle-->
	<link id="moduleTab_Opportunities" />
	<button name="clear" />
	<textfield id="name_basic" set="{@pre_opp_name}" />
	<button id="search_form_submit" />
	<link text="{@pre_opp_name}" />
	<wait timeout="5" />
	<browser assert="{@pre_opp_name}" />
	<div id="list_subpanel_activities">
		<button value="Compose Email" />
	</div>
	<wait timeout="5" />

	<table id="composeHeaderTable0">
		<select id="data_parent_type0" assert="Opportunity" />
		<textfield id="data_parent_name0" assert="{@pre_opp_name}" />
	</table>

	<link class="container-close" />
	<script file="{@global.scriptsdir}/modules/lib/Opp_Delete_Lib.xml" />
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />
	<puts text="Test: Emails_9682.xml finished." />
</soda>
