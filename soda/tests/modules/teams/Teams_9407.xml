<soda>
	<!-- Verify the replace function of team id mass update(only update one record) -->
	<puts text="Test: Teams_9407.xml starting." />

	<script file="{@global.scriptsdir}/modules/lib/Account_Create_Lib.xml" />

	<!--Go to modules that can mass update team info-->
	<link id="moduleTab_Accounts" />
	<browser assert="Accounts" />

	<button id="search_form_clear" />
	<textfield id="name_basic" set="{@pre_account_name}" />
	<button id="search_form_submit" />

	<csv file="{@global.scriptsdir}/csvs/teams/Teams_9407.csv" var="Teams_9407">
		<!-- Select all records. -->
		<form id="MassUpdate">
			<checkbox name="massall" click="true" />
		</form>
		<!-- Set teams info. -->	
		<link id="actions_link" />
		<link text="Mass Update" />
		<table id="MassUpdate_team_name_table">
			<button value="Select" />
		</table>	
		<browser assert="Team Search" />	

		<!--Team search window-->	
		<table class="list view">	
			<checkbox name="massall" click="true" />				
		</table>
		<button value="  Select  " />				

		<radio name="primary_team_name_collection" index="1" click="true" />
		<wait timeout="2" />

		<!--Mass update-->
		<button value="Update" alert="true" />            
		<wait timeout="2" />
		<!--Check teams info in detail view page-->
		<table class="list view">
			<link text="{@pre_account_name}" />		
		</table>
		<browser assert="{@pre_account_name}" />
		<browser assert="{@Teams_9407.team0}, {@Teams_9407.team1}, {@Teams_9407.team2}" />
	</csv>

	<!--Delete record-->
	<script file="{@global.scriptsdir}/modules/lib/Account_Delete_Lib.xml" />

	<puts text="Test: Teams_9407.xml finished." />
</soda>