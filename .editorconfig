root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{hbs,js,php}]
indent_style = space
indent_size = 4

[*.less]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
# Use tabs for indentation (Makefiles require tabs)
indent_style = tab
